<style>
  .footer {
    background: #f8f7f4;
    padding: 120px 80px 60px;
    margin-top: 160px;
  }

  .footer-container {
    max-width: 1440px;
    margin: 0 auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 80px;
    margin-bottom: 80px;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer-heading {
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: #666;
    margin: 0;
  }

  .footer-address {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.8;
    color: #1a1a1a;
    font-style: normal;
  }

  .footer-link {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
    display: inline-block;
  }

  .footer-link:hover {
    color: #666;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 60px;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
  }

  .social-links {
    display: flex;
    gap: 24px;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #1a1a1a;
    transition: all 0.3s ease-in-out;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
  }

  .social-icon:hover {
    color: #666;
    transform: translateY(-2px);
    border-color: rgba(0, 0, 0, 0.2);
  }

  .copyright {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 400;
    color: #666;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .footer {
      padding: 80px 40px 40px;
    }

    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 60px;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 60px 24px 32px;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 40px;
      margin-bottom: 60px;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 32px;
      padding-top: 40px;
    }
  }
</style>