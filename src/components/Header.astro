        </div>
      </div>
    </div>
  </div>
  
  <!-- Menu Overlay -->
  <div class="menu-overlay" id="menu-overlay"></div>
</header>

<script>
  // Header scroll behavior
  let lastScrollY = window.scrollY;
  let ticking = false;
  const header = document.getElementById("main-header");
  const logoImg = document.getElementById("logo-img");
  const heroSection = document.querySelector(".hero");

  function updateHeader() {
    const currentScrollY = window.scrollY;
    const heroHeight = heroSection ? heroSection.offsetHeight : 0;

    if (currentScrollY < heroHeight) {
      header?.classList.remove("header--scrolled");
      logoImg?.classList.remove("logo--dark");

      if (currentScrollY > 50) {
        header?.classList.add("header--hidden");
      } else {
        header?.classList.remove("header--hidden");
      }
    } else {
      header?.classList.add("header--scrolled");
      logoImg?.classList.add("logo--dark");

      if (currentScrollY > lastScrollY) {
        header?.classList.add("header--hidden");
      } else {
        header?.classList.remove("header--hidden");
      }
    }

    lastScrollY = currentScrollY;
    ticking = false;
  }

  function requestTick() {
    if (!ticking) {
      window.requestAnimationFrame(updateHeader);
      ticking = true;
    }
  }

  window.addEventListener("scroll", requestTick);
  updateHeader();

  // Hamburger Menu Toggle
  const menuBtn = document.getElementById("menu-btn");
  const slideMenu = document.getElementById("slide-menu");
  const menuOverlay = document.getElementById("menu-overlay");
  const slideNavLinks = document.querySelectorAll(".slide-nav-link");

  function openMenu() {
    menuBtn?.classList.add("menu-btn--open");
    slideMenu?.classList.add("slide-menu--open");
    menuOverlay?.classList.add("menu-overlay--visible");
    document.body.classList.add("menu-open");
  }

  function closeMenu() {
    menuBtn?.classList.remove("menu-btn--open");
    slideMenu?.classList.remove("slide-menu--open");
    menuOverlay?.classList.remove("menu-overlay--visible");
    document.body.classList.remove("menu-open");
  }

  menuBtn?.addEventListener("click", () => {
    if (slideMenu?.classList.contains("slide-menu--open")) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  menuOverlay?.addEventListener("click", closeMenu);

  slideNavLinks.forEach((link) => {
    link.addEventListener("click", closeMenu);
  });

  // Client Access Dropdown
  const clientAccessBtn = document.getElementById("client-access-btn");
  const clientDropdown = document.getElementById("client-dropdown");
  const clientAccessContainer = document.getElementById("client-access");

  clientAccessBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    clientAccessContainer?.classList.toggle("dropdown--open");
  });

  // Close dropdown when clicking outside
  document.addEventListener("click", (e) => {
    if (!clientAccessContainer?.contains(e.target as Node)) {
      clientAccessContainer?.classList.remove("dropdown--open");
    }
  });

  // Close dropdown on escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      clientAccessContainer?.classList.remove("dropdown--open");
      closeMenu();
    }
  });
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: transparent;
    backdrop-filter: none;
    z-index: 1000;
    border-bottom: none;
    transition:
      transform 0.3s ease-in-out,
      background 0.3s ease-in-out,
      border-color 0.3s ease-in-out,
      backdrop-filter 0.3s ease-in-out;
    transform: translateY(0);
  }

  .header--scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .header--hidden {
    transform: translateY(-100%);
  }

  .header-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 24px 80px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Hamburger Menu Button */
  .menu-btn {
    display: flex;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 1002;
    width: 40px;
  }

  .menu-btn span {
    width: 28px;
    height: 1.5px;
    background: #ffffff;
    transition: all 0.3s ease-in-out;
    transform-origin: center;
  }

  .menu-btn span:nth-child(2) {
    width: 20px;
  }

  .header--scrolled .menu-btn span {
    background: #1a1a1a;
  }

  .menu-btn--open span {
    background: #1a1a1a !important;
  }

  .menu-btn--open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .menu-btn--open span:nth-child(2) {
    opacity: 0;
    width: 0;
  }

  .menu-btn--open span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Logo */
  .logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
  }

  .logo img {
    height: 70px;
    width: auto;
    filter: brightness(0) invert(1);
    transition: filter 0.3s ease-in-out;
  }

  .logo img.logo--dark {
    filter: none;
  }

  /* Header Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 28px;
  }

  .phone {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.3px;
    color: #ffffff;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
  }

  .header--scrolled .phone {
    color: #1a1a1a;
  }

  .phone:hover {
    color: rgba(255, 255, 255, 0.7);
  }

  .header--scrolled .phone:hover {
    color: #666;
  }

  /* Client Access Dropdown */
  .client-access-container {
    position: relative;
  }

  .client-access-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: "Inter", sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
    padding: 12px 24px;
    background: transparent;
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }

  .header--scrolled .client-access-btn {
    background: #1a1a1a;
    color: #ffffff;
    border-color: #1a1a1a;
  }

  .client-access-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #ffffff;
  }

  .header--scrolled .client-access-btn:hover {
    background: #333;
  }

  .client-access-btn .chevron {
    transition: transform 0.3s ease;
  }

  .dropdown--open .client-access-btn .chevron {
    transform: rotate(180deg);
  }

  .client-dropdown {
    position: absolute;
    top: calc(100% + 12px);
    right: 0;
    width: 280px;
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 100;
  }

  .dropdown--open .client-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .dropdown-item:hover {
    background: #f5f2ed;
  }

  .dropdown-icon {
    color: #8a7f6e;
    flex-shrink: 0;
  }

  .dropdown-text {
    flex: 1;
  }

  .dropdown-title {
    display: block;
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #1a1a1a;
    margin-bottom: 2px;
  }

  .dropdown-desc {
    font-family: "Inter", sans-serif;
    font-size: 12px;
    color: #888;
  }

  .dropdown-arrow {
    color: #ccc;
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .dropdown-item:hover .dropdown-arrow {
    color: #1a1a1a;
    transform: translateX(4px);
  }

  .dropdown-divider {
    height: 1px;
    background: rgba(0, 0, 0, 0.06);
    margin: 0 20px;
  }

  /* Slide Menu */
  .slide-menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: 100%;
    max-width: 480px;
    height: 100vh;
    background: #ffffff;
    z-index: 1001;
    transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
  }

  .slide-menu--open {
    left: 0;
  }

  .slide-menu-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding: 120px 60px 60px;
  }

  .slide-nav {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .slide-nav-link {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px 0;
    text-decoration: none;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .slide-nav-link:hover {
    padding-left: 12px;
  }

  .slide-nav-link:hover .nav-text {
    color: #8a7f6e;
  }

  .nav-number {
    font-family: "Inter", sans-serif;
    font-size: 11px;
    font-weight: 400;
    color: #8a7f6e;
    letter-spacing: 1px;
  }

  .nav-text {
    font-family: "Cormorant Garamond", serif;
    font-size: 32px;
    font-weight: 400;
    color: #1a1a1a;
    transition: color 0.3s ease;
  }

  .slide-menu-footer {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .slide-phone,
  .slide-email {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    color: #666;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .slide-phone:hover,
  .slide-email:hover {
    color: #1a1a1a;
  }

  .slide-cta-btn {
    display: inline-block;
    font-family: "Inter", sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    padding: 18px 36px;
    background: #1a1a1a;
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .slide-cta-btn:hover {
    background: #333;
  }

  /* Menu Overlay */
  .menu-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 999;
  }

  .menu-overlay--visible {
    opacity: 1;
    visibility: visible;
  }

  /* Prevent body scroll when menu is open */
  :global(body.menu-open) {
    overflow: hidden;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .header-container {
      padding: 20px 40px;
    }

    .logo img {
      height: 60px;
    }

    .slide-menu {
      max-width: 400px;
    }

    .slide-menu-content {
      padding: 100px 40px 40px;
    }

    .nav-text {
      font-size: 28px;
    }
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 16px 24px;
    }

    .logo img {
      height: 50px;
    }

    .phone {
      display: none;
    }

    .client-access-btn span {
      display: none;
    }

    .client-access-btn {
      padding: 12px 16px;
      gap: 0;
    }

    .client-access-btn .chevron {
      width: 18px;
      height: 18px;
    }

    .slide-menu {
      max-width: 100%;
    }

    .slide-menu-content {
      padding: 100px 32px 32px;
    }

    .nav-text {
      font-size: 24px;
    }

    .slide-nav-link {
      padding: 20px 0;
    }

    .client-dropdown {
      position: fixed;
      top: auto;
      bottom: 0;
      left: 0;
      right: 0;
      width: 100%;
      border-radius: 20px 20px 0 0;
      transform: translateY(100%);
    }

    .dropdown--open .client-dropdown {
      transform: translateY(0);
    }
  }

  @media (max-width: 480px) {
    .slide-menu-content {
      padding: 90px 24px 24px;
    }

    .nav-text {
      font-size: 22px;
    }

    .slide-nav-link {
      gap: 16px;
      padding: 18px 0;
    }
  }
</style>