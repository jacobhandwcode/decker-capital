---
// Header.astro
---

<header class="header" id="main-header">
  <div class="header-container">
    <nav class="nav">
      <a href="/" class="nav-link">About</a>
      <a href="/team" class="nav-link">Team</a>
      <a href="/portfolio" class="nav-link">Portfolio</a>
      <a href="/contact" class="nav-link">Contact</a>
    </nav>

    <a href="/" class="logo">
      <img src="/images/logo.svg" alt="Decker Capital" id="logo-img" />
    </a>

    <div class="header-actions">
      <a href="tel:+13059000000" class="phone">+1 305.900.0000</a>
      <button class="investor-portal-btn">Investor Portal</button>
    </div>

    <!-- Mobile Menu Button -->
    <button
      class="mobile-menu-btn"
      id="mobile-menu-btn"
      aria-label="Toggle menu"
    >
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobile-menu">
    <nav class="mobile-nav">
      <a href="#about" class="mobile-nav-link">About</a>
      <a href="#team" class="mobile-nav-link">Team</a>
      <a href="/portfolio" class="mobile-nav-link">Portfolio</a>
      <a href="/contact" class="mobile-nav-link">Contact</a>
      <a href="tel:+13059000000" class="mobile-nav-link">+1 305.900.0000</a>
      <button class="mobile-submit-btn">Submit A Deal</button>
    </nav>
  </div>
</header>

<script>
  let lastScrollY = window.scrollY;
  let ticking = false;
  const header = document.getElementById("main-header");
  const logoImg = document.getElementById("logo-img");
  const heroSection = document.querySelector(".hero");
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const mobileNavLinks = document.querySelectorAll(".mobile-nav-link");

  function updateHeader() {
    const currentScrollY = window.scrollY;
    const heroHeight = heroSection ? heroSection.offsetHeight : 0;

    // If we're in the hero section
    if (currentScrollY < heroHeight) {
      header?.classList.remove("header--scrolled");
      logoImg?.classList.remove("logo--dark");

      // Hide header completely when scrolling in hero section (after initial 50px)
      if (currentScrollY > 50) {
        header?.classList.add("header--hidden");
      } else {
        header?.classList.remove("header--hidden");
      }
    }
    // If we've scrolled past the hero
    else {
      header?.classList.add("header--scrolled");
      logoImg?.classList.add("logo--dark");

      // Show/hide based on scroll direction
      if (currentScrollY > lastScrollY) {
        // Scrolling down
        header?.classList.add("header--hidden");
      } else {
        // Scrolling up
        header?.classList.remove("header--hidden");
      }
    }

    lastScrollY = currentScrollY;
    ticking = false;
  }

  function requestTick() {
    if (!ticking) {
      window.requestAnimationFrame(updateHeader);
      ticking = true;
    }
  }

  // Mobile menu toggle
  mobileMenuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("mobile-menu--open");
    mobileMenuBtn?.classList.toggle("mobile-menu-btn--open");
    document.body.classList.toggle("menu-open");
  });

  // Close mobile menu when clicking a link
  mobileNavLinks.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.remove("mobile-menu--open");
      mobileMenuBtn?.classList.remove("mobile-menu-btn--open");
      document.body.classList.remove("menu-open");
    });
  });

  window.addEventListener("scroll", requestTick);

  // Initial check
  updateHeader();
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: transparent;
    backdrop-filter: none;
    z-index: 1000;
    border-bottom: none;
    transition:
      transform 0.3s ease-in-out,
      background 0.3s ease-in-out,
      border-color 0.3s ease-in-out,
      backdrop-filter 0.3s ease-in-out;
    transform: translateY(0);
  }

  .header--scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .header--hidden {
    transform: translateY(-100%);
  }

  .header-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 24px 80px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .logo img {
    height: 70px;
    width: auto;
    filter: brightness(0) invert(1);
    transition: filter 0.3s ease-in-out;
  }

  .logo img.logo--dark {
    filter: none;
  }

  .nav {
    display: flex;
    gap: 48px;
  }

  .nav-link {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.5px;
    color: #ffffff;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
    position: relative;
  }

  .header--scrolled .nav-link {
    color: #1a1a1a;
  }

  .nav-link:hover {
    color: rgba(255, 255, 255, 0.7);
  }

  .header--scrolled .nav-link:hover {
    color: #666;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: #ffffff;
    transition: width 0.3s ease-in-out;
  }

  .header--scrolled .nav-link::after {
    background: #1a1a1a;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .phone {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.3px;
    color: #ffffff;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
  }

  .header--scrolled .phone {
    color: #1a1a1a;
  }

  .phone:hover {
    color: rgba(255, 255, 255, 0.7);
  }

  .header--scrolled .phone:hover {
    color: #666;
  }

  .investor-portal-btn {
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.8px;
    padding: 12px 28px;
    background: transparent;
    color: white;
    border: 1px solid white;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    text-transform: uppercase;
    border-radius: 30px;
  }

  .header--scrolled .investor-portal-btn {
    background: #1a1a1a;
    border: 1px solid #1a1a1a;
  }

  .investor-portal-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .header--scrolled .investor-portal-btn:hover {
    background: #333;
    transform: translateY(-1px);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 1002;
  }

  .mobile-menu-btn span {
    width: 25px;
    height: 2px;
    background: #ffffff;
    transition: all 0.3s ease-in-out;
  }

  .header--scrolled .mobile-menu-btn span {
    background: #1a1a1a;
  }

  .mobile-menu-btn--open span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .mobile-menu-btn--open span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn--open span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    z-index: 1001;
    transition: right 0.3s ease-in-out;
    padding-top: 100px;
  }

  .mobile-menu--open {
    right: 0;
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    padding: 0 40px;
    gap: 32px;
  }

  .mobile-nav-link {
    font-family: "Inter", sans-serif;
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 0.5px;
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding-bottom: 16px;
  }

  .mobile-nav-link:hover {
    color: #666;
  }

  .mobile-submit-btn {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.8px;
    padding: 16px 32px;
    background: #1a1a1a;
    color: white;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    text-transform: uppercase;
    margin-top: 20px;
  }

  .mobile-submit-btn:hover {
    background: #333;
  }

  /* Prevent body scroll when menu is open */
  :global(body.menu-open) {
    overflow: hidden;
  }

  @media (max-width: 1024px) {
    .header-container {
      padding: 20px 40px;
    }

    .nav {
      gap: 32px;
    }

    .logo img {
      height: 60px;
    }
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 16px 24px;
    }

    .logo img {
      height: 50px;
    }

    .nav,
    .header-actions {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    .mobile-menu {
      max-width: 100%;
    }

    .mobile-nav {
      padding: 0 24px;
    }
  }
</style>
