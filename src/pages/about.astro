---
// about.astro (Our Approach)
import Layout from "../layouts/Layout.astro";

const repositioningSteps = [
  {
    title: "Property Assessment",
    description:
      "Comprehensive evaluation of current condition, market positioning, and value-add opportunities.",
  },
  {
    title: "Capital Planning",
    description:
      "Strategic budget allocation for improvements that deliver maximum ROI and tenant appeal.",
  },
  {
    title: "Execution",
    description:
      "Vertically integrated implementation ensuring cost efficiency, quality control, and speed.",
  },
  {
    title: "Stabilization",
    description:
      "Lease-up strategy and ongoing management to maximize occupancy and rental rates.",
  },
];

const improvements = [
  "Exterior faÃ§ade upgrades",
  "Modern signage & wayfinding",
  "LED lighting retrofits",
  "Parking lot resurfacing",
  "Landscaping enhancements",
  "HVAC modernization",
  "Roll-up door replacements",
  "Office finish upgrades",
];

const brandPillars = [
  {
    title: "Uniform Identity",
    description:
      "Consistent signage, color schemes, and property aesthetics across the entire portfolio.",
  },
  {
    title: "Tenant Experience",
    description:
      "Professional management, responsive maintenance, and clear communication standards.",
  },
  {
    title: "Market Presence",
    description:
      "Recognizable brand that instills trust in tenants, brokers, and investment partners.",
  },
];
---

<Layout>
  <div class="page">
    <!-- Custom Cursor -->
    <div class="cursor-dot"></div>
    <div class="cursor-ring"></div>

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-image">
        <img src="/images/hero.png" alt="Industrial Property" />
      </div>
      <div class="hero-content">
        <div class="hero-eyebrow">
          <span class="eyebrow-line"></span>
          <span>About</span>
          <span class="eyebrow-line"></span>
        </div>
        <h1 class="hero-title">Our Approach</h1>
        <p class="hero-subtitle">
          Value creation through operational excellence
        </p>
      </div>
    </section>

    <!-- Mission Statement -->
    <section class="mission-section">
      <div class="mission-container">
        <div class="mission-content">
          <span class="section-eyebrow">Our Mission</span>
          <blockquote class="mission-quote">
            "To be the premier operator of small-bay industrial real estate in
            the Southeast, delivering exceptional returns through disciplined
            acquisition, transformational repositioning, and
            institutional-quality management."
          </blockquote>
        </div>
      </div>
    </section>

    <!-- Repositioning Strategy -->
    <section class="strategy-section">
      <div class="strategy-container">
        <div class="strategy-header">
          <span class="section-eyebrow">Value Creation</span>
          <h2 class="section-headline">
            Transformational Repositioning Strategy
          </h2>
          <p class="strategy-subtitle">
            Decker Capital implements comprehensive capital improvement and
            repositioning plans to modernize and elevate properties to
            best-in-class small-bay product.
          </p>
        </div>

        <div class="strategy-content">
          <div class="process-steps">
            {
              repositioningSteps.map((step, index) => (
                <div class="process-step">
                  <div class="step-number">
                    <span>0{index + 1}</span>
                  </div>
                  <div class="step-content">
                    <h3 class="step-title">{step.title}</h3>
                    <p class="step-description">{step.description}</p>
                  </div>
                </div>
              ))
            }
          </div>

          <div class="improvements-panel">
            <div class="improvements-card">
              <h3 class="improvements-title">Capital Improvements</h3>
              <p class="improvements-intro">
                Our enhancements significantly improve curb appeal, tenant
                experience, and long-term asset value:
              </p>
              <div class="improvements-grid">
                {
                  improvements.map((item) => (
                    <div class="improvement-item">
                      <span class="improvement-check">
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <polyline points="20 6 9 17 4 12" />
                        </svg>
                      </span>
                      <span>{item}</span>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Vertical Integration -->
    <section class="integration-section">
      <div class="integration-container">
        <div class="integration-content">
          <span class="section-eyebrow light">Competitive Advantage</span>
          <h2 class="integration-headline">Vertically Integrated Platform</h2>
          <p class="integration-description">
            Our in-house capabilities across acquisition, construction, property
            management, and leasing allow us to control quality, reduce costs,
            and accelerate timelines. This integrated approach ensures we can
            rapidly unlock value through targeted, high-impact enhancements.
          </p>
          <div class="integration-stats">
            <div class="integration-stat">
              <span class="stat-number" data-count="30" data-suffix="%">0%</span
              >
              <span class="stat-label">Lower Renovation Costs</span>
            </div>
            <div class="integration-stat">
              <span class="stat-number" data-count="2" data-suffix="x">0x</span>
              <span class="stat-label">Faster Execution</span>
            </div>
            <div class="integration-stat">
              <span class="stat-number" data-count="100" data-suffix="%"
                >0%</span
              >
              <span class="stat-label">Quality Control</span>
            </div>
          </div>
        </div>
        <div class="integration-visual">
          <div class="visual-card">
            <div class="visual-image">
              <img src="/images/property1.png" alt="Before Repositioning" />
              <span class="visual-label">Before</span>
            </div>
          </div>
          <div class="visual-card">
            <div class="visual-image">
              <img src="/images/property2.png" alt="After Repositioning" />
              <span class="visual-label">After</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Brand Equity -->
    <section class="brand-section">
      <div class="brand-container">
        <div class="brand-header">
          <span class="section-eyebrow">Differentiation</span>
          <h2 class="section-headline">Building Brand Equity</h2>
          <p class="brand-subtitle">
            Decker Capital is strategically focused on creating a consistent,
            recognizable identity rooted in professionalism, reliability, and
            performance.
          </p>
        </div>

        <div class="brand-grid">
          {
            brandPillars.map((pillar, index) => (
              <div class="brand-card">
                <span class="brand-number">0{index + 1}</span>
                <h3 class="brand-title">{pillar.title}</h3>
                <p class="brand-description">{pillar.description}</p>
              </div>
            ))
          }
        </div>

        <div class="brand-statement">
          <p>
            By aligning marketing, property design, and tenant communication
            under one strong visual and strategic brand, Decker Capital
            differentiates itself from competitors, instills trust in
            stakeholders, and drives long-term value across all assets.
          </p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-content">
        <h2 class="cta-headline">Partner With Us</h2>
        <p class="cta-description">
          Learn how our approach can work for your investment goals or property.
        </p>
        <div class="cta-buttons">
          <a href="/contact" class="cta-button primary magnetic-btn">
            <span>Send Us A Deal</span>
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="/portfolio" class="cta-button secondary magnetic-btn">
            <span>View Portfolio</span>
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>

<!-- GSAP & ScrollTrigger -->
<script
  is:inline
  src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script
  is:inline
  src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
></script>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    gsap.registerPlugin(ScrollTrigger);

    console.log("ðŸš€ GSAP loaded, starting about page animations...");

    // ============================================
    // TEXT SPLITTING UTILITY
    // ============================================
    function splitTextIntoSpans(element, className) {
      if (!element) return [];
      var text = element.textContent;
      var words = text.trim().split(/\s+/);
      element.innerHTML = words
        .map(function (word) {
          return (
            '<span class="' +
            className +
            '" style="display: inline-block;">' +
            word +
            "&nbsp;</span>"
          );
        })
        .join("");
      return element.querySelectorAll("." + className);
    }

    // Split hero title
    var heroTitle = document.querySelector(".hero-title");
    splitTextIntoSpans(heroTitle, "title-word");

    // Split CTA headline
    var ctaHeadline = document.querySelector(".cta-headline");
    splitTextIntoSpans(ctaHeadline, "cta-word");

    // Split section headlines
    var sectionHeadlines = document.querySelectorAll(".section-headline");
    sectionHeadlines.forEach(function (headline, index) {
      splitTextIntoSpans(headline, "headline-word-" + index);
    });

    // ============================================
    // CUSTOM CURSOR
    // ============================================
    var cursorDot = document.querySelector(".cursor-dot");
    var cursorRing = document.querySelector(".cursor-ring");
    var mouseX = 0,
      mouseY = 0;
    var ringX = 0,
      ringY = 0;

    if (cursorDot && cursorRing && window.innerWidth > 768) {
      document.addEventListener("mousemove", function (e) {
        mouseX = e.clientX;
        mouseY = e.clientY;
        gsap.to(cursorDot, { x: mouseX, y: mouseY, duration: 0.1 });
      });

      function animateCursor() {
        ringX += (mouseX - ringX) * 0.15;
        ringY += (mouseY - ringY) * 0.15;
        gsap.set(cursorRing, { x: ringX, y: ringY });
        requestAnimationFrame(animateCursor);
      }
      animateCursor();

      var hoverElements = document.querySelectorAll(
        "a, button, .brand-card, .visual-card",
      );
      hoverElements.forEach(function (el) {
        el.addEventListener("mouseenter", function () {
          gsap.to(cursorRing, {
            scale: 1.5,
            borderColor: "#8a7f6e",
            duration: 0.3,
          });
          gsap.to(cursorDot, { scale: 0.5, duration: 0.3 });
        });
        el.addEventListener("mouseleave", function () {
          gsap.to(cursorRing, {
            scale: 1,
            borderColor: "#1a1a1a",
            duration: 0.3,
          });
          gsap.to(cursorDot, { scale: 1, duration: 0.3 });
        });
      });
    }

    // ============================================
    // MAGNETIC BUTTON EFFECT
    // ============================================
    var magneticBtns = document.querySelectorAll(".magnetic-btn");
    magneticBtns.forEach(function (btn) {
      btn.addEventListener("mousemove", function (e) {
        var rect = btn.getBoundingClientRect();
        var x = e.clientX - rect.left - rect.width / 2;
        var y = e.clientY - rect.top - rect.height / 2;
        gsap.to(btn, {
          x: x * 0.3,
          y: y * 0.3,
          duration: 0.3,
          ease: "power2.out",
        });
      });
      btn.addEventListener("mouseleave", function () {
        gsap.to(btn, {
          x: 0,
          y: 0,
          duration: 0.5,
          ease: "elastic.out(1, 0.3)",
        });
      });
    });

    // ============================================
    // HERO ANIMATIONS
    // ============================================
    var heroTl = gsap.timeline({ defaults: { ease: "power3.out" } });

    gsap.set(".hero-eyebrow span:not(.eyebrow-line)", { y: 30, opacity: 0 });
    gsap.set(".eyebrow-line", { scaleX: 0 });
    gsap.set(".title-word", { y: 80, opacity: 0, rotationX: -40 });
    gsap.set(".hero-subtitle", { y: 30, opacity: 0 });

    heroTl
      .to(".eyebrow-line", { scaleX: 1, duration: 0.8, stagger: 0.1 }, 0.3)
      .to(
        ".hero-eyebrow span:not(.eyebrow-line)",
        { y: 0, opacity: 1, duration: 0.6 },
        0.5,
      )
      .to(
        ".title-word",
        {
          y: 0,
          opacity: 1,
          rotationX: 0,
          duration: 1,
          stagger: 0.08,
          ease: "power4.out",
        },
        0.6,
      )
      .to(
        ".hero-subtitle",
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          ease: "power3.out",
        },
        1,
      );

    // ============================================
    // MISSION SECTION
    // ============================================
    gsap.set(".mission-content .section-eyebrow", { y: 30, opacity: 0 });
    gsap.set(".mission-quote", { y: 50, opacity: 0 });

    var missionTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".mission-section",
        start: "top 70%",
      },
    });

    missionTl
      .to(".mission-content .section-eyebrow", {
        y: 0,
        opacity: 1,
        duration: 0.6,
        ease: "power3.out",
      })
      .to(
        ".mission-quote",
        {
          y: 0,
          opacity: 1,
          duration: 1,
          ease: "power4.out",
        },
        "-=0.3",
      );

    // ============================================
    // STRATEGY SECTION
    // ============================================
    gsap.set(".strategy-header .section-eyebrow", { y: 30, opacity: 0 });
    gsap.set(".headline-word-0", { y: 60, opacity: 0, rotationX: -30 });
    gsap.set(".strategy-subtitle", { y: 30, opacity: 0 });
    gsap.set(".process-step", { x: -60, opacity: 0 });
    gsap.set(".improvements-card", {
      y: 60,
      opacity: 0,
      clipPath: "polygon(0 0, 0 0, 0 100%, 0 100%)",
    });

    var strategyTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".strategy-section",
        start: "top 65%",
      },
    });

    strategyTl
      .to(".strategy-header .section-eyebrow", {
        y: 0,
        opacity: 1,
        duration: 0.6,
        ease: "power3.out",
      })
      .to(
        ".headline-word-0",
        {
          y: 0,
          opacity: 1,
          rotationX: 0,
          duration: 0.8,
          stagger: 0.05,
          ease: "power4.out",
        },
        "-=0.3",
      )
      .to(
        ".strategy-subtitle",
        { y: 0, opacity: 1, duration: 0.6, ease: "power3.out" },
        "-=0.4",
      )
      .to(
        ".process-step",
        {
          x: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.12,
          ease: "power3.out",
        },
        "-=0.2",
      )
      .to(
        ".improvements-card",
        {
          y: 0,
          opacity: 1,
          clipPath: "polygon(0 0, 100% 0, 100% 100%, 0 100%)",
          duration: 1,
          ease: "power4.out",
        },
        "-=0.6",
      );

    // Improvement items stagger
    gsap.set(".improvement-item", { x: -20, opacity: 0 });
    ScrollTrigger.create({
      trigger: ".improvements-card",
      start: "top 70%",
      onEnter: function () {
        gsap.to(".improvement-item", {
          x: 0,
          opacity: 1,
          duration: 0.5,
          stagger: 0.08,
          ease: "power3.out",
          delay: 0.5,
        });
      },
    });

    // ============================================
    // INTEGRATION SECTION
    // ============================================
    gsap.set(".integration-content .section-eyebrow", { y: 30, opacity: 0 });
    gsap.set(".integration-headline", { y: 50, opacity: 0 });
    gsap.set(".integration-description", { y: 40, opacity: 0 });
    gsap.set(".integration-stat", { y: 40, opacity: 0, scale: 0.9 });
    gsap.set(".visual-card", {
      y: 60,
      opacity: 0,
      scale: 0.95,
    });

    var integrationTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".integration-section",
        start: "top 65%",
      },
    });

    integrationTl
      .to(".integration-content .section-eyebrow", {
        y: 0,
        opacity: 1,
        duration: 0.6,
        ease: "power3.out",
      })
      .to(
        ".integration-headline",
        { y: 0, opacity: 1, duration: 0.8, ease: "power4.out" },
        "-=0.3",
      )
      .to(
        ".integration-description",
        { y: 0, opacity: 1, duration: 0.7, ease: "power3.out" },
        "-=0.4",
      )
      .to(
        ".integration-stat",
        {
          y: 0,
          opacity: 1,
          scale: 1,
          duration: 0.6,
          stagger: 0.15,
          ease: "back.out(1.7)",
          onComplete: function () {
            startIntegrationCounters();
          },
        },
        "-=0.3",
      )
      .to(
        ".visual-card",
        {
          y: 0,
          opacity: 1,
          scale: 1,
          duration: 0.8,
          stagger: 0.2,
          ease: "power4.out",
        },
        "-=0.4",
      );

    // Counter animation for integration stats
    var integrationCountersStarted = false;
    function startIntegrationCounters() {
      if (integrationCountersStarted) return;
      integrationCountersStarted = true;

      var statNumbers = document.querySelectorAll(
        ".integration-stat .stat-number",
      );
      statNumbers.forEach(function (stat) {
        var target = parseInt(stat.getAttribute("data-count") || "0");
        var suffix = stat.getAttribute("data-suffix") || "";
        var obj = { value: 0 };
        gsap.to(obj, {
          value: target,
          duration: 2,
          ease: "power2.out",
          onUpdate: function () {
            stat.textContent = Math.floor(obj.value) + suffix;
          },
        });
      });
    }

    // Visual card hover effects
    document.querySelectorAll(".visual-card").forEach(function (card) {
      var img = card.querySelector("img");
      card.addEventListener("mouseenter", function () {
        gsap.to(img, { scale: 1.1, duration: 0.6, ease: "power2.out" });
      });
      card.addEventListener("mouseleave", function () {
        gsap.to(img, { scale: 1, duration: 0.5, ease: "power2.out" });
      });
    });

    // ============================================
    // BRAND SECTION
    // ============================================
    gsap.set(".brand-header .section-eyebrow", { y: 30, opacity: 0 });
    gsap.set(".headline-word-1", { y: 60, opacity: 0, rotationX: -30 });
    gsap.set(".brand-subtitle", { y: 30, opacity: 0 });
    gsap.set(".brand-card", { y: 80, opacity: 0, scale: 0.95 });
    gsap.set(".brand-statement", { y: 40, opacity: 0 });

    var brandTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".brand-section",
        start: "top 65%",
      },
    });

    brandTl
      .to(".brand-header .section-eyebrow", {
        y: 0,
        opacity: 1,
        duration: 0.6,
        ease: "power3.out",
      })
      .to(
        ".headline-word-1",
        {
          y: 0,
          opacity: 1,
          rotationX: 0,
          duration: 0.8,
          stagger: 0.05,
          ease: "power4.out",
        },
        "-=0.3",
      )
      .to(
        ".brand-subtitle",
        { y: 0, opacity: 1, duration: 0.6, ease: "power3.out" },
        "-=0.4",
      )
      .to(
        ".brand-card",
        {
          y: 0,
          opacity: 1,
          scale: 1,
          duration: 0.8,
          stagger: 0.15,
          ease: "power4.out",
        },
        "-=0.2",
      )
      .to(
        ".brand-statement",
        { y: 0, opacity: 1, duration: 0.8, ease: "power3.out" },
        "-=0.3",
      );

    // Brand card hover parallax
    document.querySelectorAll(".brand-card").forEach(function (card) {
      card.addEventListener("mousemove", function (e) {
        var rect = card.getBoundingClientRect();
        var x = (e.clientX - rect.left) / rect.width - 0.5;
        var y = (e.clientY - rect.top) / rect.height - 0.5;

        gsap.to(card, {
          rotationY: x * 8,
          rotationX: -y * 8,
          duration: 0.4,
          ease: "power2.out",
          transformPerspective: 1000,
        });
      });

      card.addEventListener("mouseleave", function () {
        gsap.to(card, {
          rotationY: 0,
          rotationX: 0,
          duration: 0.6,
          ease: "power2.out",
        });
      });
    });

    // ============================================
    // CTA SECTION
    // ============================================
    gsap.set(".cta-word", { y: 60, opacity: 0, rotationX: -30 });
    gsap.set(".cta-description", { y: 30, opacity: 0 });
    gsap.set(".cta-button", { y: 30, opacity: 0, scale: 0.9 });

    var ctaTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".cta-section",
        start: "top 70%",
      },
    });

    ctaTl
      .to(".cta-word", {
        y: 0,
        opacity: 1,
        rotationX: 0,
        duration: 1,
        stagger: 0.08,
        ease: "power4.out",
      })
      .to(
        ".cta-description",
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          ease: "power3.out",
        },
        "-=0.5",
      )
      .to(
        ".cta-button",
        {
          y: 0,
          opacity: 1,
          scale: 1,
          duration: 0.8,
          stagger: 0.15,
          ease: "back.out(1.7)",
        },
        "-=0.4",
      );

    // ============================================
    // PARALLAX EFFECTS
    // ============================================
    gsap.to(".hero-image img", {
      scrollTrigger: {
        trigger: ".hero",
        start: "top top",
        end: "bottom top",
        scrub: 1,
      },
      y: 100,
      scale: 1.2,
      ease: "none",
    });

    // Mission section parallax
    gsap.to(".mission-quote", {
      scrollTrigger: {
        trigger: ".mission-section",
        start: "top bottom",
        end: "bottom top",
        scrub: 1,
      },
      y: -30,
      ease: "none",
    });

    console.log("âœ¨ All about page animations initialized!");
  });
</script>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

  :root {
    --padding-xl: 70px;
    --padding-lg: 56px;
    --padding-md: 48px;
    --padding-sm: 32px;
    --padding-xs: 20px;
    --max-width: 1440px;
    --color-primary: #1a1a1a;
    --color-secondary: #8a7f6e;
    --color-cream: #f5f2ed;
    --color-warm: #dbd3c6;
    --font-display: "Poppins", sans-serif;
    --font-body: "Inter", sans-serif;
    --ease: cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* ============================================
       CUSTOM CURSOR
       ============================================ */
  .cursor-dot {
    position: fixed;
    width: 8px;
    height: 8px;
    background: var(--color-primary);
    border-radius: 50%;
    pointer-events: none;
    z-index: 10000;
    transform: translate(-50%, -50%);
    mix-blend-mode: difference;
  }

  .cursor-ring {
