---
// team.astro
import Layout from "../layouts/Layout.astro";

const teamMembers = [
    {
        name: "Shane Decker",
        title: "Founder & CEO",
        bio: "Shane leads Decker Capital's small-bay industrial platform across the Southeast, overseeing $300M in acquisitions. A UF graduate, he drives tech-focused value creation.",
        image: "/images/decker.png",
        email: "Shane@DeckerCap.com",
        linkedin: "https://linkedin.com/in/shanedecker",
    },
    {
        name: "Michael Torres",
        title: "Chief Investment Officer",
        bio: "Michael oversees investment strategy and deal sourcing. With 15 years in commercial real estate, he has led over $500M in transactions across industrial properties.",
        image: "/images/decker.png",
        email: "Michael@DeckerCap.com",
        linkedin: "https://linkedin.com/in/michaeltorres",
    },
    {
        name: "Sarah Chen",
        title: "VP of Acquisitions",
        bio: "Sarah manages the acquisitions pipeline and due diligence process. Her background in finance and real estate law ensures thorough analysis of every opportunity.",
        image: "/images/decker.png",
        email: "Sarah@DeckerCap.com",
        linkedin: "https://linkedin.com/in/sarahchen",
    },
    {
        name: "David Martinez",
        title: "Director of Asset Management",
        bio: "David leads property operations and tenant relations across the portfolio. His hands-on approach maximizes NOI and ensures consistent value creation.",
        image: "/images/decker.png",
        email: "David@DeckerCap.com",
        linkedin: "https://linkedin.com/in/davidmartinez",
    },
];

const values = [
    {
        title: "Integrity",
        description: "We operate with transparency and honesty in every transaction."
    },
    {
        title: "Excellence",
        description: "We pursue the highest standards in everything we do."
    },
    {
        title: "Partnership",
        description: "We build lasting relationships with investors and tenants alike."
    },
];
---

<Layout>
    <div class="page">
        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-image">
                <img src="/images/hero.png" alt="Industrial Property" />
            </div>
            <div class="hero-content">
                <div class="hero-eyebrow">
                    <span class="eyebrow-line"></span>
                    <span>Team</span>
                    <span class="eyebrow-line"></span>
                </div>
                <h1 class="hero-title">Who We Are</h1>
                <p class="hero-subtitle">Experienced professionals committed to excellence</p>
            </div>
        </section>

        <!-- Intro Section -->
        <section class="intro-section">
            <div class="intro-container">
                <div class="intro-content">
                    <span class="section-eyebrow">Who We Are</span>
                    <h2 class="intro-headline">Built on Experience, Driven by Results</h2>
                    <p class="intro-description">
                        Decker Capital brings together seasoned real estate professionals with deep expertise in industrial property investment. Our team combines institutional-level analysis with entrepreneurial agility to identify and execute on compelling opportunities.
                    </p>
                </div>
                <div class="intro-stats">
                    <div class="intro-stat">
                        <span class="intro-stat-number">50+</span>
                        <span class="intro-stat-label">Years Combined Experience</span>
                    </div>
                    <div class="intro-stat">
                        <span class="intro-stat-number">$500M+</span>
                        <span class="intro-stat-label">Transaction Volume</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section class="team-section">
            <div class="team-container">
                <div class="team-header">
                    <span class="section-eyebrow">Leadership</span>
                    <h2 class="section-headline">Meet The Team</h2>
                </div>

                <div class="team-grid">
                    {teamMembers.map((member, index) => (
                        <article class="team-card" style={`animation-delay: ${index * 0.1}s`}>
                            <div class="member-image-wrapper">
                                <div class="member-image">
                                    <img src={member.image} alt={member.name} />
                                </div>
                                <div class="member-overlay">
                                    <div class="member-links">
                                        <a href={`mailto:${member.email}`} class="member-link" aria-label="Email">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                                <polyline points="22,6 12,13 2,6"/>
                                            </svg>
                                        </a>
                                        <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="member-link" aria-label="LinkedIn">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="member-info">
                                <span class="member-title">{member.title}</span>
                                <h3 class="member-name">{member.name}</h3>
                                <p class="member-bio">{member.bio}</p>
                                <a href={`mailto:${member.email}`} class="member-email">{member.email}</a>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>

        <!-- Values Section -->
        <section class="values-section">
            <div class="values-container">
                <div class="values-header">
                    <span class="section-eyebrow">Our Foundation</span>
                    <h2 class="section-headline light">Core Values</h2>
                </div>
                <div class="values-grid">
                    {values.map((value, index) => (
                        <div class="value-card">
                            <span class="value-number">0{index + 1}</span>
                            <h3 class="value-title">{value.title}</h3>
                            <p class="value-description">{value.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="cta-content">
                <h2 class="cta-headline">Join Our Network</h2>
                <p class="cta-description">Interested in partnering with us? We're always looking to connect with brokers, investors, and property owners.</p>
                <a href="/contact" class="cta-button">
                    <span>Get In Touch</span>
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </section>
    </div>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const cards = document.querySelectorAll('.team-card');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) entry.target.classList.add('visible');
            });
        }, { threshold: 0.1 });
        cards.forEach(card => observer.observe(card));
    });
</script>

<style>
    :root {
        --padding-xl: 120px;
        --padding-lg: 80px;
        --padding-md: 60px;
        --max-width: 1440px;
        --color-primary: #1a1a1a;
        --color-secondary: #8a7f6e;
        --color-cream: #f5f2ed;
        --color-warm: #dbd3c6;
        --font-display: "Cormorant Garamond", serif;
        --font-body: "Inter", sans-serif;
        --ease: cubic-bezier(0.4, 0, 0.2, 1);
    }

    .page { background: #fff; overflow-x: hidden; }

    /* Hero */
    .hero { position: relative; width: 100%; height: 60vh; min-height: 500px; display: flex; align-items: center; justify-content: center; overflow: hidden; }
    .hero-image { position: absolute; inset: 0; z-index: 1; }
    .hero-image::after { content: ""; position: absolute; inset: 0; background: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.6) 100%); z-index: 2; }
    .hero-image img { width: 100%; height: 100%; object-fit: cover; transform: scale(1.05); animation: heroZoom 20s ease-in-out infinite alternate; }
    @keyframes heroZoom { from { transform: scale(1.05); } to { transform: scale(1.15); } }

    .hero-content { position: relative; z-index: 3; text-align: center; padding: 0 var(--padding-md); display: flex; flex-direction: column; align-items: center; }
    .hero-eyebrow { display: flex; align-items: center; gap: 20px; font-family: var(--font-body); font-size: 12px; letter-spacing: 4px; text-transform: uppercase; color: rgba(255,255,255,1); margin-bottom: 24px; }
    .eyebrow-line { width: 60px; height: 1px; background: rgba(255,255,255,1); }
    .hero-title { font-family: var(--font-display); font-size: clamp(42px, 6vw, 80px); font-weight: 400; line-height: 1.1; color: #fff; letter-spacing: -1px; margin: 0 0 20px 0; }
    .hero-subtitle { font-family: var(--font-body); font-size: 14px; letter-spacing: 3px; text-transform: uppercase; color: rgba(255,255,255,0.7); margin: 0; }

    /* Section Eyebrow */
    .section-eyebrow { font-family: var(--font-body); font-size: 11px; font-weight: 500; letter-spacing: 3px; text-transform: uppercase; color: var(--color-secondary); display: block; margin-bottom: 16px; }
    .section-headline { font-family: var(--font-display); font-size: clamp(36px, 4vw, 52px); font-weight: 400; color: var(--color-primary); margin: 0; }
    .section-headline.light { color: #fff; }

    /* Intro */
    .intro-section { padding: var(--padding-xl) var(--padding-md); background: #fff; }
    .intro-container { display: grid; grid-template-columns: 1.5fr 1fr; gap: 80px; max-width: var(--max-width); margin: 0 auto; align-items: center; }
    .intro-headline { font-family: var(--font-display); font-size: clamp(32px, 3.5vw, 48px); font-weight: 400; line-height: 1.2; color: var(--color-primary); margin: 0 0 24px 0; }
    .intro-description { font-family: var(--font-body); font-size: 16px; line-height: 1.8; color: #555; margin: 0; }

    .intro-stats { display: flex; flex-direction: column; gap: 40px; padding-left: 60px; border-left: 1px solid rgba(0,0,0,0.1); }
    .intro-stat { display: flex; flex-direction: column; gap: 8px; }
    .intro-stat-number { font-family: var(--font-display); font-size: clamp(40px, 4vw, 56px); font-weight: 300; color: var(--color-primary); line-height: 1; }
    .intro-stat-label { font-family: var(--font-body); font-size: 13px; color: var(--color-secondary); letter-spacing: 1px; }

    /* Team */
    .team-section { padding: var(--padding-xl) var(--padding-md); background: var(--color-cream); }
    .team-container { max-width: var(--max-width); margin: 0 auto; }
    .team-header { text-align: center; margin-bottom: 60px; }

    .team-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 30px; }

    .team-card { background: #fff; opacity: 0; transform: translateY(30px); transition: all 0.6s var(--ease); }
    .team-card.visible { opacity: 1; transform: translateY(0); }
    .team-card:hover { transform: translateY(-8px); box-shadow: 0 20px 60px rgba(0,0,0,0.1); }

    .member-image-wrapper { position: relative; overflow: hidden; }
    .member-image { aspect-ratio: 1/1.1; overflow: hidden; }
    .member-image img { width: 100%; height: 100%; object-fit: cover; object-position: center top; transition: transform 0.8s var(--ease); }
    .team-card:hover .member-image img { transform: scale(1.05); }

    .member-overlay { position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 50%); display: flex; align-items: flex-end; justify-content: center; padding: 24px; opacity: 0; transition: opacity 0.4s var(--ease); }
    .team-card:hover .member-overlay { opacity: 1; }

    .member-links { display: flex; gap: 12px; transform: translateY(10px); transition: transform 0.4s var(--ease); }
    .team-card:hover .member-links { transform: translateY(0); }
    .member-link { width: 44px; height: 44px; display: flex; align-items: center; justify-content: center; background: #fff; color: var(--color-primary); transition: all 0.3s var(--ease); }
    .member-link:hover { background: var(--color-primary); color: #fff; }

    .member-info { padding: 28px; }
    .member-title { font-family: var(--font-body); font-size: 11px; font-weight: 500; letter-spacing: 2px; text-transform: uppercase; color: var(--color-secondary); display: block; margin-bottom: 8px; }
    .member-name { font-family: var(--font-display); font-size: 26px; font-weight: 400; color: var(--color-primary); margin: 0 0 16px 0; }
    .member-bio { font-family: var(--font-body); font-size: 14px; line-height: 1.7; color: #555; margin: 0 0 16px 0; }
    .member-email { font-family: var(--font-body); font-size: 13px; color: var(--color-secondary); text-decoration: none; transition: color 0.3s var(--ease); }
    .member-email:hover { color: var(--color-primary); }

    /* Values */
    .values-section { padding: var(--padding-xl) var(--padding-md); background: var(--color-primary); }
    .values-container { max-width: var(--max-width); margin: 0 auto; }
    .values-header { text-align: center; margin-bottom: 60px; }
    .values-header .section-eyebrow { color: rgba(255,255,255,0.5); }

    .values-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 40px; }
    .value-card { padding: 40px; border: 1px solid rgba(255,255,255,0.15); transition: all 0.4s var(--ease); }
    .value-card:hover { background: rgba(255,255,255,0.05); border-color: rgba(255,255,255,0.3); }
    .value-number { font-family: var(--font-display); font-size: 14px; color: rgba(255,255,255,0.4); display: block; margin-bottom: 20px; letter-spacing: 2px; }
    .value-title { font-family: var(--font-display); font-size: 28px; font-weight: 400; color: #fff; margin: 0 0 16px 0; }
    .value-description { font-family: var(--font-body); font-size: 14px; line-height: 1.7; color: rgba(255,255,255,0.7); margin: 0; }

    /* CTA */
    .cta-section { padding: var(--padding-xl) var(--padding-md); background: var(--color-warm); text-align: center; }
    .cta-content { max-width: 600px; margin: 0 auto; }
    .cta-headline { font-family: var(--font-display); font-size: clamp(36px, 4vw, 52px); font-weight: 400; color: var(--color-primary); margin: 0 0 20px 0; }
    .cta-description { font-family: var(--font-body); font-size: 16px; line-height: 1.7; color: #555; margin: 0 0 40px 0; }
    .cta-button { display: inline-flex; align-items: center; gap: 12px; font-family: var(--font-body); font-size: 13px; font-weight: 500; letter-spacing: 2px; text-transform: uppercase; color: #fff; background: var(--color-primary); text-decoration: none; padding: 20px 40px; transition: all 0.4s var(--ease); }
    .cta-button:hover { background: #333; gap: 18px; }

    /* Tablet */
    @media (max-width: 1200px) {
        .team-grid { grid-template-columns: repeat(2, 1fr); }
    }

    @media (max-width: 1024px) {
        .intro-container { grid-template-columns: 1fr; gap: 60px; }
        .intro-stats { flex-direction: row; padding-left: 0; border-left: none; padding-top: 40px; border-top: 1px solid rgba(0,0,0,0.1); }
        .values-grid { grid-template-columns: 1fr; gap: 24px; }
    }

    /* Mobile */
    @media (max-width: 768px) {
        :root { --padding-xl: 80px; --padding-lg: 60px; --padding-md: 24px; }
        .hero { height: 50vh; min-height: 400px; }
        .hero-eyebrow { font-size: 10px; gap: 16px; }
        .eyebrow-line { width: 40px; }
        .intro-stats { flex-direction: column; gap: 30px; }
        .team-grid { grid-template-columns: 1fr; gap: 24px; }
        .member-name { font-size: 24px; }
        .value-card { padding: 30px; }
        .cta-button { width: 100%; justify-content: center; }
    }
</style>

<style is:global>
    ::selection { background: #1a1a1a; color: #fff; }
    html { scroll-behavior: smooth; }
</style>