---
// team.astro
import Layout from "../layouts/Layout.astro";

const teamMembers = [
	{
		name: "Shane Decker",
		title: "Founder & CEO",
		bio: "Shane Decker leads Decker Capital's small-bay industrial platform across the Southeast, overseeing $300M in acquisitions. A UF graduate, he drives tech-focused value creation and serves on advisory boards.",
		image: "/images/decker.png",
		email: "shane@deckercapital.com",
		phone: "(305) 555-0101",
		linkedin: "https://linkedin.com/in/shanedecker"
	},
	{
		name: "Michael Torres",
		title: "Chief Investment Officer",
		bio: "Michael Torres oversees Decker Capital's investment strategy and deal sourcing. With 15 years in commercial real estate, he has led over $500M in transactions across industrial and flex properties.",
		image: "/images/team/michael.png",
		email: "michael@deckercapital.com",
		phone: "(305) 555-0102",
		linkedin: "https://linkedin.com/in/michaeltorres"
	},
	{
		name: "Sarah Chen",
		title: "VP of Acquisitions",
		bio: "Sarah Chen manages the acquisitions pipeline and due diligence process. Her background in finance and real estate law ensures thorough analysis of every potential investment opportunity.",
		image: "/images/team/sarah.png",
		email: "sarah@deckercapital.com",
		phone: "(305) 555-0103",
		linkedin: "https://linkedin.com/in/sarahchen"
	},
	{
		name: "David Martinez",
		title: "Director of Asset Management",
		bio: "David Martinez leads property operations and tenant relations across the portfolio. His hands-on approach maximizes NOI and ensures consistent value creation for investors.",
		image: "/images/team/david.png",
		email: "david@deckercapital.com",
		phone: "(305) 555-0104",
		linkedin: "https://linkedin.com/in/davidmartinez"
	}
];
---

<Layout>
	<div class="page">
		<!-- Hero Section -->
		<section class="hero">
			<div class="hero-image">
				<img src="/images/hero.png" alt="Industrial Property" />
			</div>
			<div class="hero-content">
				<h1 class="hero-title">Our Team</h1>
			</div>
		</section>

		<!-- Team Section -->
		<section class="team-section">
			<div class="team-container">
				<h2 class="section-title">Meet The Team</h2>
				
				<div class="team-grid">
					{teamMembers.map((member) => (
						<article class="team-card">
							<div class="member-image">
								<img src={member.image} alt={member.name} />
							</div>
							<div class="member-info">
								<div class="member-header">
									<h3 class="member-name">{member.name}</h3>
									<span class="member-title">{member.title}</span>
								</div>
								<p class="member-bio">{member.bio}</p>
								<div class="member-contact">
									<a href={`mailto:${member.email}`} class="contact-icon" aria-label="Email">
										<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
											<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
											<polyline points="22,6 12,13 2,6"/>
										</svg>
									</a>
									<a href={`tel:${member.phone}`} class="contact-icon" aria-label="Phone">
										<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
											<path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
										</svg>
									</a>
									<a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="contact-icon linkedin" aria-label="LinkedIn">
										<svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
											<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
										</svg>
									</a>
								</div>
							</div>
						</article>
					))}
				</div>
			</div>
		</section>
	</div>
</Layout>

<style>
	.page {
		background: #ffffff;
	}

	/* Hero Section */
	.hero {
		position: relative;
		width: 100%;
		height: 50vh;
		min-height: 400px;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.hero-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
	}

	.hero-image::after {
		content: "";
		position: absolute;
		inset: 0;
		background: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 0.65) 0%,
			rgba(0, 0, 0, 0.45) 40%,
			rgba(0, 0, 0, 0.65) 100%
		);
		z-index: 2;
	}

	.hero-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.hero-content {
		position: relative;
		z-index: 3;
		text-align: center;
		padding: 0 80px;
	}

	.hero-title {
		font-family: "Cormorant Garamond", serif;
		font-size: 72px;
		font-weight: 400;
		line-height: 1.2;
		color: #ffffff;
		letter-spacing: -0.5px;
		text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
		margin: 0;
	}

	/* Team Section */
	.team-section {
		padding: 80px;
		background: #ffffff;
	}

	.team-container {
		max-width: 1400px;
		margin: 0 auto;
	}

	.section-title {
		font-family: 'Cormorant Garamond', serif;
		font-size: 56px;
		font-weight: 400;
		font-style: italic;
		color: #1a1a1a;
		text-align: center;
		margin: 0 0 60px 0;
		letter-spacing: -0.5px;
	}

	/* Team Grid */
	.team-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 30px;
	}

	.team-card {
		border: 1px solid #1a1a1a;
		background: #ffffff;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.team-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
	}

	.member-image {
		aspect-ratio: 1/1;
		overflow: hidden;
		background: #f5f5f5;
	}

	.member-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center top;
		transition: transform 0.6s ease-in-out;
	}

	.team-card:hover .member-image img {
		transform: scale(1.05);
	}

	.member-info {
		padding: 24px;
	}

	.member-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: 16px;
		gap: 12px;
	}

	.member-name {
		font-family: 'Cormorant Garamond', serif;
		font-size: 20px;
		font-weight: 600;
		color: #1a1a1a;
		margin: 0;
	}

	.member-title {
		font-family: 'Inter', sans-serif;
		font-size: 11px;
		font-weight: 400;
		color: #666;
		white-space: nowrap;
	}

	.member-bio {
		font-family: 'Inter', sans-serif;
		font-size: 13px;
		line-height: 1.6;
		color: #555;
		margin: 0 0 20px 0;
	}

	.member-contact {
		display: flex;
		gap: 12px;
	}

	.contact-icon {
		width: 32px;
		height: 32px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #1a1a1a;
		transition: all 0.3s ease;
	}

	.contact-icon:hover {
		opacity: 0.6;
	}

	.contact-icon.linkedin {
		background: #1a1a1a;
		color: #ffffff;
		border-radius: 50%;
	}

	.contact-icon.linkedin:hover {
		background: #0077b5;
		opacity: 1;
	}

	/* Responsive */
	@media (max-width: 1200px) {
		.team-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 30px;
		}

		.section-title {
			font-size: 48px;
		}
	}

	@media (max-width: 768px) {
		.hero {
			height: 40vh;
			min-height: 300px;
		}

		.hero-content {
			padding: 0 24px;
		}

		.hero-title {
			font-size: 42px;
		}

		.team-section {
			padding: 40px 24px;
		}

		.section-title {
			font-size: 36px;
			margin-bottom: 40px;
		}

		.team-grid {
			grid-template-columns: 1fr;
			gap: 24px;
		}

		.member-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 4px;
		}

		.member-name {
			font-size: 22px;
		}

		.member-title {
			font-size: 12px;
		}
	}
</style>

<style is:global>
	::selection {
		background: #1a1a1a;
		color: #ffffff;
	}
</style>