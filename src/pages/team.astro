---
// team.astro
import Layout from "../layouts/Layout.astro";

const teamMembers = [
    {
        name: "Shane Decker",
        title: "Founder & CEO",
        bio: "Shane leads Decker Capital's small-bay industrial platform across the Southeast, overseeing $300M in acquisitions. A UF graduate, he drives tech-focused value creation.",
        image: "/images/decker.png",
        email: "Shane@DeckerCap.com",
        linkedin: "https://linkedin.com/in/shanedecker",
    },
    {
        name: "Michael Torres",
        title: "Chief Investment Officer",
        bio: "Michael oversees investment strategy and deal sourcing. With 15 years in commercial real estate, he has led over $500M in transactions across industrial properties.",
        image: "/images/decker.png",
        email: "Michael@DeckerCap.com",
        linkedin: "https://linkedin.com/in/michaeltorres",
    },
    {
        name: "Sarah Chen",
        title: "VP of Acquisitions",
        bio: "Sarah manages the acquisitions pipeline and due diligence process. Her background in finance and real estate law ensures thorough analysis of every opportunity.",
        image: "/images/decker.png",
        email: "Sarah@DeckerCap.com",
        linkedin: "https://linkedin.com/in/sarahchen",
    },
    {
        name: "David Martinez",
        title: "Director of Asset Management",
        bio: "David leads property operations and tenant relations across the portfolio. His hands-on approach maximizes NOI and ensures consistent value creation.",
        image: "/images/decker.png",
        email: "David@DeckerCap.com",
        linkedin: "https://linkedin.com/in/davidmartinez",
    },
];

const values = [
    {
        title: "Integrity",
        description: "We operate with transparency and honesty in every transaction."
    },
    {
        title: "Excellence",
        description: "We pursue the highest standards in everything we do."
    },
    {
        title: "Partnership",
        description: "We build lasting relationships with investors and tenants alike."
    },
];
---

<Layout>
    <div class="page">
        <!-- Custom Cursor -->
        <div class="cursor-dot"></div>
        <div class="cursor-ring"></div>

        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-image">
                <img src="/images/hero.png" alt="Industrial Property" />
            </div>
            <div class="hero-content">
                <div class="hero-eyebrow">
                    <span class="eyebrow-line"></span>
                    <span>Team</span>
                    <span class="eyebrow-line"></span>
                </div>
                <h1 class="hero-title">Who We Are</h1>
                <p class="hero-subtitle">Experienced professionals committed to excellence</p>
            </div>
        </section>

        <!-- Intro Section -->
        <section class="intro-section">
            <div class="intro-container">
                <div class="intro-content">
                    <span class="section-eyebrow">Who We Are</span>
                    <h2 class="intro-headline">Built on Experience, Driven by Results</h2>
                    <p class="intro-description">
                        Decker Capital brings together seasoned real estate professionals with deep expertise in industrial property investment. Our team combines institutional-level analysis with entrepreneurial agility to identify and execute on compelling opportunities.
                    </p>
                </div>
                <div class="intro-stats">
                    <div class="intro-stat">
                        <span class="intro-stat-number" data-count="50" data-suffix="+">0+</span>
                        <span class="intro-stat-label">Years Combined Experience</span>
                    </div>
                    <div class="intro-stat">
                        <span class="intro-stat-number" data-count="500" data-prefix="$" data-suffix="M+">$0M+</span>
                        <span class="intro-stat-label">Transaction Volume</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section class="team-section">
            <div class="team-container">
                <div class="team-header">
                    <span class="section-eyebrow">Leadership</span>
                    <h2 class="section-headline">Meet The Team</h2>
                </div>

                <div class="team-grid">
                    {teamMembers.map((member, index) => (
                        <article class="team-card" data-index={index}>
                            <div class="member-image-wrapper">
                                <div class="member-image">
                                    <img src={member.image} alt={member.name} />
                                </div>
                                <div class="member-overlay">
                                    <div class="member-links">
                                        <a href={`mailto:${member.email}`} class="member-link" aria-label="Email">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                                <polyline points="22,6 12,13 2,6"/>
                                            </svg>
                                        </a>
                                        <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="member-link" aria-label="LinkedIn">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="member-info">
                                <span class="member-title">{member.title}</span>
                                <h3 class="member-name">{member.name}</h3>
                                <p class="member-bio">{member.bio}</p>
                                <a href={`mailto:${member.email}`} class="member-email">{member.email}</a>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>

        <!-- Values Section -->
        <section class="values-section">
            <div class="values-container">
                <div class="values-header">
                    <span class="section-eyebrow">Our Foundation</span>
                    <h2 class="section-headline light">Core Values</h2>
                </div>
                <div class="values-grid">
                    {values.map((value, index) => (
                        <div class="value-card" data-index={index}>
                            <span class="value-number">0{index + 1}</span>
                            <h3 class="value-title">{value.title}</h3>
                            <p class="value-description">{value.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="cta-content">
                <h2 class="cta-headline">Join Our Network</h2>
                <p class="cta-description">Interested in partnering with us? We're always looking to connect with brokers, investors, and property owners.</p>
                <a href="/contact" class="cta-button magnetic-btn">
                    <span>Get In Touch</span>
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </section>
    </div>
</Layout>

<!-- GSAP & ScrollTrigger -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

<script is:inline>
    document.addEventListener("DOMContentLoaded", function() {
        gsap.registerPlugin(ScrollTrigger);
        
        console.log('ðŸš€ GSAP loaded, starting team page animations...');

        // ============================================
        // TEXT SPLITTING UTILITY
        // ============================================
        function splitTextIntoSpans(element, className) {
            if (!element) return [];
            var text = element.textContent;
            var words = text.trim().split(/\s+/);
            element.innerHTML = words.map(function(word) {
                return '<span class="' + className + '" style="display: inline-block;">' + word + '&nbsp;</span>';
            }).join('');
            return element.querySelectorAll('.' + className);
        }

        // Split hero title
        var heroTitle = document.querySelector('.hero-title');
        splitTextIntoSpans(heroTitle, 'title-word');

        // Split intro headline
        var introHeadline = document.querySelector('.intro-headline');
        splitTextIntoSpans(introHeadline, 'intro-word');

        // Split section headlines
        var teamHeadline = document.querySelector('.team-header .section-headline');
        splitTextIntoSpans(teamHeadline, 'team-headline-word');

        var valuesHeadline = document.querySelector('.values-header .section-headline');
        splitTextIntoSpans(valuesHeadline, 'values-headline-word');

        // Split CTA headline
        var ctaHeadline = document.querySelector('.cta-headline');
        splitTextIntoSpans(ctaHeadline, 'cta-word');

        // ============================================
        // CUSTOM CURSOR
        // ============================================
        var cursorDot = document.querySelector('.cursor-dot');
        var cursorRing = document.querySelector('.cursor-ring');
        var mouseX = 0, mouseY = 0;
        var ringX = 0, ringY = 0;

        if (cursorDot && cursorRing && window.innerWidth > 768) {
            document.addEventListener('mousemove', function(e) {
                mouseX = e.clientX;
                mouseY = e.clientY;
                gsap.to(cursorDot, { x: mouseX, y: mouseY, duration: 0.1 });
            });

            function animateCursor() {
                ringX += (mouseX - ringX) * 0.15;
                ringY += (mouseY - ringY) * 0.15;
                gsap.set(cursorRing, { x: ringX, y: ringY });
                requestAnimationFrame(animateCursor);
            }
            animateCursor();

            var hoverElements = document.querySelectorAll('a, button, .team-card, .value-card, .member-link');
            hoverElements.forEach(function(el) {
                el.addEventListener('mouseenter', function() {
                    gsap.to(cursorRing, { scale: 1.5, borderColor: '#8a7f6e', duration: 0.3 });
                    gsap.to(cursorDot, { scale: 0.5, duration: 0.3 });
                });
                el.addEventListener('mouseleave', function() {
                    gsap.to(cursorRing, { scale: 1, borderColor: '#1a1a1a', duration: 0.3 });
                    gsap.to(cursorDot, { scale: 1, duration: 0.3 });
                });
            });
        }

        // ============================================
        // MAGNETIC BUTTON EFFECT
        // ============================================
        var magneticBtns = document.querySelectorAll('.magnetic-btn');
        magneticBtns.forEach(function(btn) {
            btn.addEventListener('mousemove', function(e) {
                var rect = btn.getBoundingClientRect();
                var x = e.clientX - rect.left - rect.width / 2;
                var y = e.clientY - rect.top - rect.height / 2;
                gsap.to(btn, { x: x * 0.3, y: y * 0.3, duration: 0.3, ease: 'power2.out' });
            });
            btn.addEventListener('mouseleave', function() {
                gsap.to(btn, { x: 0, y: 0, duration: 0.5, ease: 'elastic.out(1, 0.3)' });
            });
        });

        // ============================================
        // HERO ANIMATIONS
        // ============================================
        var heroTl = gsap.timeline({ defaults: { ease: 'power3.out' } });
        
        gsap.set('.hero-eyebrow span:not(.eyebrow-line)', { y: 30, opacity: 0 });
        gsap.set('.eyebrow-line', { scaleX: 0 });
        gsap.set('.title-word', { y: 80, opacity: 0, rotationX: -40 });
        gsap.set('.hero-subtitle', { y: 30, opacity: 0 });

        heroTl
            .to('.eyebrow-line', { scaleX: 1, duration: 0.8, stagger: 0.1 }, 0.3)
            .to('.hero-eyebrow span:not(.eyebrow-line)', { y: 0, opacity: 1, duration: 0.6 }, 0.5)
            .to('.title-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 1, 
                stagger: 0.08,
                ease: 'power4.out'
            }, 0.6)
            .to('.hero-subtitle', { 
                y: 0, 
                opacity: 1, 
                duration: 0.8,
                ease: 'power3.out'
            }, 1);

        // Hero parallax
        gsap.to('.hero-image img', {
            scrollTrigger: {
                trigger: '.hero',
                start: 'top top',
                end: 'bottom top',
                scrub: 1
            },
            y: 100,
            scale: 1.2,
            ease: 'none'
        });

        // ============================================
        // INTRO SECTION
        // ============================================
        gsap.set('.intro-content .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.intro-word', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.intro-description', { y: 40, opacity: 0 });
        gsap.set('.intro-stats', { x: 60, opacity: 0 });
        gsap.set('.intro-stat', { y: 30, opacity: 0 });

        var introTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.intro-section',
                start: 'top 70%'
            }
        });

        introTl
            .to('.intro-content .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.intro-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 0.8, 
                stagger: 0.04,
                ease: 'power4.out'
            }, '-=0.3')
            .to('.intro-description', { y: 0, opacity: 1, duration: 0.8, ease: 'power3.out' }, '-=0.4')
            .to('.intro-stats', { x: 0, opacity: 1, duration: 0.8, ease: 'power4.out' }, '-=0.5')
            .to('.intro-stat', { 
                y: 0, 
                opacity: 1, 
                duration: 0.6, 
                stagger: 0.15,
                ease: 'power3.out',
                onComplete: function() {
                    animateIntroCounters();
                }
            }, '-=0.4');

        // Intro stats counter animation
        var introCountersAnimated = false;
        function animateIntroCounters() {
            if (introCountersAnimated) return;
            introCountersAnimated = true;

            var statNumbers = document.querySelectorAll('.intro-stat-number');
            statNumbers.forEach(function(stat) {
                var target = parseInt(stat.getAttribute('data-count') || '0');
                var prefix = stat.getAttribute('data-prefix') || '';
                var suffix = stat.getAttribute('data-suffix') || '';
                var obj = { value: 0 };

                gsap.to(obj, {
                    value: target,
                    duration: 2,
                    ease: 'power2.out',
                    onUpdate: function() {
                        stat.textContent = prefix + Math.floor(obj.value) + suffix;
                    }
                });
            });
        }

        // ============================================
        // TEAM SECTION
        // ============================================
        gsap.set('.team-header .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.team-headline-word', { y: 60, opacity: 0, rotationX: -30 });

        var teamHeaderTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.team-section',
                start: 'top 70%'
            }
        });

        teamHeaderTl
            .to('.team-header .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.team-headline-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 0.8, 
                stagger: 0.05,
                ease: 'power4.out'
            }, '-=0.3');

        // Team cards animations
        var teamCards = document.querySelectorAll('.team-card');
        
        teamCards.forEach(function(card, index) {
            gsap.set(card, { 
                y: 80, 
                opacity: 0,
                scale: 0.95
            });

            ScrollTrigger.create({
                trigger: card,
                start: 'top 85%',
                onEnter: function() {
                    gsap.to(card, {
                        y: 0,
                        opacity: 1,
                        scale: 1,
                        duration: 0.8,
                        delay: (index % 4) * 0.1, // Stagger within each row
                        ease: 'power4.out'
                    });
                }
            });
        });

        // Team card hover effects
        teamCards.forEach(function(card) {
            var img = card.querySelector('.member-image img');
            var overlay = card.querySelector('.member-overlay');
            var links = card.querySelector('.member-links');

            card.addEventListener('mouseenter', function() {
                gsap.to(card, { y: -10, boxShadow: '0 20px 60px rgba(0,0,0,0.15)', duration: 0.4, ease: 'power2.out' });
                gsap.to(img, { scale: 1.08, duration: 0.6, ease: 'power2.out' });
            });

            card.addEventListener('mouseleave', function() {
                gsap.to(card, { y: 0, boxShadow: '0 0 0 rgba(0,0,0,0)', duration: 0.4, ease: 'power2.out' });
                gsap.to(img, { scale: 1, duration: 0.6, ease: 'power2.out' });
            });

            // 3D tilt effect on card
            card.addEventListener('mousemove', function(e) {
                var rect = card.getBoundingClientRect();
                var x = (e.clientX - rect.left) / rect.width - 0.5;
                var y = (e.clientY - rect.top) / rect.height - 0.5;

                gsap.to(card, {
                    rotationY: x * 8,
                    rotationX: -y * 8,
                    duration: 0.4,
                    ease: 'power2.out',
                    transformPerspective: 1000
                });
            });

            card.addEventListener('mouseleave', function() {
                gsap.to(card, { 
                    rotationY: 0, 
                    rotationX: 0, 
                    duration: 0.6, 
                    ease: 'power2.out' 
                });
            });
        });

        // Member link hover
        var memberLinks = document.querySelectorAll('.member-link');
        memberLinks.forEach(function(link) {
            link.addEventListener('mouseenter', function() {
                gsap.to(link, { scale: 1.15, duration: 0.3, ease: 'back.out(1.7)' });
            });
            link.addEventListener('mouseleave', function() {
                gsap.to(link, { scale: 1, duration: 0.3, ease: 'power2.out' });
            });
        });

        // ============================================
        // VALUES SECTION
        // ============================================
        gsap.set('.values-header .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.values-headline-word', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.value-card', { y: 60, opacity: 0, scale: 0.95 });

        var valuesTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.values-section',
                start: 'top 65%'
            }
        });

        valuesTl
            .to('.values-header .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.values-headline-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 0.8, 
                stagger: 0.05,
                ease: 'power4.out'
            }, '-=0.3')
            .to('.value-card', { 
                y: 0, 
                opacity: 1, 
                scale: 1,
                duration: 0.8, 
                stagger: 0.15,
                ease: 'power4.out'
            }, '-=0.3');

        // Value card hover effects
        var valueCards = document.querySelectorAll('.value-card');
        valueCards.forEach(function(card) {
            card.addEventListener('mouseenter', function() {
                gsap.to(card, { 
                    y: -8, 
                    scale: 1.02,
                    backgroundColor: 'rgba(255,255,255,0.08)',
                    borderColor: 'rgba(255,255,255,0.3)',
                    duration: 0.4, 
                    ease: 'power2.out' 
                });
            });
            card.addEventListener('mouseleave', function() {
                gsap.to(card, { 
                    y: 0, 
                    scale: 1,
                    backgroundColor: 'rgba(255,255,255,0)',
                    borderColor: 'rgba(255,255,255,0.15)',
                    duration: 0.4, 
                    ease: 'power2.out' 
                });
            });
        });

        // ============================================
        // CTA SECTION
        // ============================================
        gsap.set('.cta-word', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.cta-description', { y: 30, opacity: 0 });
        gsap.set('.cta-button', { y: 30, opacity: 0, scale: 0.9 });

        var ctaTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.cta-section',
                start: 'top 70%'
            }
        });

        ctaTl
            .to('.cta-word', {
                y: 0,
                opacity: 1,
                rotationX: 0,
                duration: 1,
                stagger: 0.08,
                ease: 'power4.out'
            })
            .to('.cta-description', {
                y: 0,
                opacity: 1,
                duration: 0.8,
                ease: 'power3.out'
            }, '-=0.5')
            .to('.cta-button', {
                y: 0,
                opacity: 1,
                scale: 1,
                duration: 0.8,
                ease: 'back.out(1.7)'
            }, '-=0.4');

        // ============================================
        // PARALLAX EFFECTS
        // ============================================
        gsap.to('.intro-headline', {
            scrollTrigger: {
                trigger: '.intro-section',
                start: 'top bottom',
                end: 'bottom top',
                scrub: 1
            },
            y: -30,
            ease: 'none'
        });

        console.log('âœ¨ All team page animations initialized!');
    });
</script>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

    :root {
        --padding-xl: 70px;
        --padding-lg: 56px;
        --padding-md: 48px;
        --padding-sm: 32px;
        --padding-xs: 20px;
        --max-width: 1440px;
        --color-primary: #1a1a1a;
        --color-secondary: #8a7f6e;
        --color-cream: #f5f2ed;
        --color-warm: #dbd3c6;
        --font-display: "Poppins", sans-serif;
        --font-body: "Inter", sans-serif;
        --ease: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* ============================================
       CUSTOM CURSOR
       ============================================ */
    .cursor-dot {
        position: fixed;
        width: 8px;
        height: 8px;
        background: var(--color-primary);
        border-radius: 50%;
        pointer-events: none;
        z-index: 10000;
        transform: translate(-50%, -50%);
        mix-blend-mode: difference;
    }

    .cursor-ring {
        position: fixed;
        width: 40px;
        height: 40px;
        border: 1px solid var(--color-primary);
        border-radius: 50%;
        pointer-events: none;
        z-index: 9999;
        transform: translate(-50%, -50%);
        transition: border-color 0.3s ease;
    }

    @media (max-width: 768px) {
        .cursor-dot, .cursor-ring {
            display: none;
        }
    }

    .page { 
        background: #fff; 
        overflow-x: hidden;
        cursor: none;
    }

    @media (max-width: 768px) {
        .page {
            cursor: auto;
        }
    }

    /* Hero */
    .hero { 
        position: relative; 
        width: 100%; 
        height: 50vh; 
        min-height: 400px; 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        overflow: hidden; 
    }
    
    .hero-image { 
        position: absolute; 
        inset: 0; 
        z-index: 1; 
    }
    
    .hero-image::after { 
        content: ""; 
        position: absolute; 
        inset: 0; 
        background: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.6) 100%); 
        z-index: 2; 
    }
    
    .hero-image img { 
        width: 100%; 
        height: 100%; 
        object-fit: cover;
        will-change: transform;
    }

    .hero-content { 
        position: relative; 
        z-index: 3; 
        text-align: center; 
        padding: 0 var(--padding-md); 
        display: flex; 
        flex-direction: column; 
        align-items: center; 
    }
    
    .hero-eyebrow { 
        display: flex; 
        align-items: center; 
        gap: 20px; 
        font-family: var(--font-body); 
        font-size: 12px; 
        letter-spacing: 4px; 
        text-transform: uppercase; 
        color: rgba(255,255,255,1); 
        margin-bottom: 20px; 
    }
    
    .eyebrow-line { 
        width: 60px; 
