---
// investment-criteria.astro
import Layout from "../layouts/Layout.astro";

const demandDrivers = [
    {
        title: "E-Commerce Growth",
        stat: "20",
        statSuffix: "%",
        statLabel: "of industrial demand by 2025",
        description: "The rapid expansion of online shopping has resulted in an increased need for last-mile distribution centers, typically smaller in size and closer to urban centers.",
        source: "CBRE"
    },
    {
        title: "Supply Scarcity",
        stat: "100",
        statSuffix: "K+",
        statLabel: "SF focus of new construction",
        description: "New industrial construction is primarily focused on larger buildings, leaving the market for smaller units significantly underbuilt across most regions.",
        source: "JLL"
    },
    {
        title: "Higher Yields",
        stat: "2-3",
        statSuffix: "%",
        statLabel: "premium over large industrial",
        description: "Small-bay properties typically offer higher returns on investment, especially in markets where demand is strong and supply remains limited.",
        source: "Marcus & Millichap"
    },
];

const criteria = [
    { label: "Unit Size", value: "1,000 - 20,000 SF" },
    { label: "Property Type", value: "Multi-Tenant Industrial" },
    { label: "Geography", value: "Southeast US" },
    { label: "Deal Size", value: "$5M - $50M" },
    { label: "Asset Class", value: "Value-Add & Core Plus" },
    { label: "Occupancy", value: "70%+ Preferred" },
];

const tenantTypes = [
    "E-Commerce & Fulfillment",
    "Contractors & Tradespeople", 
    "Light Manufacturing",
    "Service-Based Businesses",
    "Wholesale Distribution",
    "Last-Mile Logistics"
];
---

<Layout>
    <div class="page">
        <!-- Custom Cursor -->
        <div class="cursor-dot"></div>
        <div class="cursor-ring"></div>

        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-image">
                <img src="/images/hero.png" alt="Industrial Property" />
            </div>
            <div class="hero-content">
                <div class="hero-eyebrow">
                    <span class="eyebrow-line"></span>
                    <span>Investment Criteria</span>
                    <span class="eyebrow-line"></span>
                </div>
                <h1 class="hero-title">Why Small Bay?</h1>
                <p class="hero-subtitle">The Decker Advantage</p>
            </div>
        </section>

        <!-- Intro Section -->
        <section class="intro-section">
            <div class="intro-container">
                <div class="intro-content">
                    <span class="section-eyebrow">The Opportunity</span>
                    <h2 class="intro-headline">Small-Bay Industrial: A Compelling Investment</h2>
                </div>
                <div class="intro-text">
                    <p>
                        Small-bay industrial real estate refers to properties typically ranging from 1,000 to 50,000 square feet. <strong>Decker Capital specializes in the 1,000 to 20,000 SF range</strong>â€”units designed for light manufacturing, warehousing, and distribution that accommodate a diverse range of businesses.
                    </p>
                    <p>
                        The demand for small-bay industrial properties has surged in recent years, driven by fundamental shifts in the economy and real estate market that show no signs of slowing.
                    </p>
                </div>
            </div>
        </section>

        <!-- Demand Drivers -->
        <section class="drivers-section">
            <div class="drivers-container">
                <div class="drivers-header">
                    <span class="section-eyebrow">Market Dynamics</span>
                    <h2 class="section-headline">Why Small-Bay Is In High Demand</h2>
                </div>
                <div class="drivers-grid">
                    {demandDrivers.map((driver, index) => (
                        <div class="driver-card" data-index={index}>
                            <span class="driver-number">0{index + 1}</span>
                            <div class="driver-stat">
                                <span class="driver-stat-number" data-count={driver.stat} data-suffix={driver.statSuffix}>0{driver.statSuffix}</span>
                                <span class="driver-stat-label">{driver.statLabel}</span>
                            </div>
                            <h3 class="driver-title">{driver.title}</h3>
                            <p class="driver-description">{driver.description}</p>
                            <span class="driver-source">Source: {driver.source}</span>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Investment Benefits -->
        <section class="benefits-section">
            <div class="benefits-container">
                <div class="benefits-content">
                    <span class="section-eyebrow light">Investment Thesis</span>
                    <h2 class="benefits-headline">A Solid Investment Opportunity</h2>
                    <div class="benefits-text">
                        <p>
                            Small-bay industrial properties offer several distinct advantages. Their flexibility allows them to cater to a diverse range of tenantsâ€”from small businesses to larger tenants seeking flexible leases or smaller footprints.
                        </p>
                        <p>
                            Unlike large logistics hubs that rely on capital-intensive tenants, small-bay spaces serve businesses that are more diverse and often more stable. This provides a <strong>diversified tenant base</strong> that reduces investment risk.
                        </p>
                    </div>
                </div>
                <div class="benefits-visual">
                    <div class="tenant-types">
                        <h3 class="tenant-types-title">Our Tenant Base</h3>
                        <div class="tenant-grid">
                            {tenantTypes.map((tenant) => (
                                <div class="tenant-item">
                                    <span class="tenant-check">âœ“</span>
                                    <span>{tenant}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Criteria Section -->
        <section class="criteria-section">
            <div class="criteria-container">
                <div class="criteria-header">
                    <span class="section-eyebrow">What We Target</span>
                    <h2 class="section-headline">Investment Criteria</h2>
                    <p class="criteria-subtitle">We focus on specific parameters that align with our expertise and deliver consistent returns.</p>
                </div>
                <div class="criteria-grid">
                    {criteria.map((item, index) => (
                        <div class="criteria-card" data-index={index}>
                            <span class="criteria-label">{item.label}</span>
                            <span class="criteria-value">{item.value}</span>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="cta-content">
                <h2 class="cta-headline">Have a Property That Fits?</h2>
                <p class="cta-description">We're actively acquiring small-bay industrial properties across the Southeast. Let's discuss your opportunity.</p>
                <a href="/contact" class="cta-button magnetic-btn">
                    <span>Send Us A Deal</span>
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </section>
    </div>
</Layout>

<!-- GSAP & ScrollTrigger -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

<script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
        gsap.registerPlugin(ScrollTrigger);
        
        console.log('ðŸš€ GSAP loaded, starting investment criteria page animations...');

        // ============================================
        // TEXT SPLITTING UTILITY
        // ============================================
        function splitTextIntoSpans(element, className) {
            if (!element) return [];
            var text = element.textContent;
            var words = text.trim().split(/\s+/);
            element.innerHTML = words.map(function(word) {
                return '<span class="' + className + '" style="display: inline-block;">' + word + '&nbsp;</span>';
            }).join('');
            return element.querySelectorAll('.' + className);
        }

        // Split hero title
        var heroTitle = document.querySelector('.hero-title');
        splitTextIntoSpans(heroTitle, 'title-word');

        // Split intro headline
        var introHeadline = document.querySelector('.intro-headline');
        splitTextIntoSpans(introHeadline, 'intro-word');

        // Split section headlines
        var sectionHeadlines = document.querySelectorAll('.section-headline');
        sectionHeadlines.forEach(function(headline, index) {
            splitTextIntoSpans(headline, 'headline-word-' + index);
        });

        // Split benefits headline
        var benefitsHeadline = document.querySelector('.benefits-headline');
        splitTextIntoSpans(benefitsHeadline, 'benefits-word');

        // Split CTA headline
        var ctaHeadline = document.querySelector('.cta-headline');
        splitTextIntoSpans(ctaHeadline, 'cta-word');

        // ============================================
        // CUSTOM CURSOR
        // ============================================
        var cursorDot = document.querySelector('.cursor-dot');
        var cursorRing = document.querySelector('.cursor-ring');
        var mouseX = 0, mouseY = 0;
        var ringX = 0, ringY = 0;

        if (cursorDot && cursorRing && window.innerWidth > 768) {
            document.addEventListener('mousemove', function(e) {
                mouseX = e.clientX;
                mouseY = e.clientY;
                gsap.to(cursorDot, { x: mouseX, y: mouseY, duration: 0.1 });
            });

            function animateCursor() {
                ringX += (mouseX - ringX) * 0.15;
                ringY += (mouseY - ringY) * 0.15;
                gsap.set(cursorRing, { x: ringX, y: ringY });
                requestAnimationFrame(animateCursor);
            }
            animateCursor();

            var hoverElements = document.querySelectorAll('a, button, .driver-card, .criteria-card, .tenant-item');
            hoverElements.forEach(function(el) {
                el.addEventListener('mouseenter', function() {
                    gsap.to(cursorRing, { scale: 1.5, borderColor: '#8a7f6e', duration: 0.3 });
                    gsap.to(cursorDot, { scale: 0.5, duration: 0.3 });
                });
                el.addEventListener('mouseleave', function() {
                    gsap.to(cursorRing, { scale: 1, borderColor: '#1a1a1a', duration: 0.3 });
                    gsap.to(cursorDot, { scale: 1, duration: 0.3 });
                });
            });
        }

        // ============================================
        // MAGNETIC BUTTON EFFECT
        // ============================================
        var magneticBtns = document.querySelectorAll('.magnetic-btn');
        magneticBtns.forEach(function(btn) {
            btn.addEventListener('mousemove', function(e) {
                var rect = btn.getBoundingClientRect();
                var x = e.clientX - rect.left - rect.width / 2;
                var y = e.clientY - rect.top - rect.height / 2;
                gsap.to(btn, { x: x * 0.3, y: y * 0.3, duration: 0.3, ease: 'power2.out' });
            });
            btn.addEventListener('mouseleave', function() {
                gsap.to(btn, { x: 0, y: 0, duration: 0.5, ease: 'elastic.out(1, 0.3)' });
            });
        });

        // ============================================
        // HERO ANIMATIONS
        // ============================================
        var heroTl = gsap.timeline({ defaults: { ease: 'power3.out' } });
        
        gsap.set('.hero-eyebrow span:not(.eyebrow-line)', { y: 30, opacity: 0 });
        gsap.set('.eyebrow-line', { scaleX: 0 });
        gsap.set('.title-word', { y: 80, opacity: 0, rotationX: -40 });
        gsap.set('.hero-subtitle', { y: 30, opacity: 0 });

        heroTl
            .to('.eyebrow-line', { scaleX: 1, duration: 0.8, stagger: 0.1 }, 0.3)
            .to('.hero-eyebrow span:not(.eyebrow-line)', { y: 0, opacity: 1, duration: 0.6 }, 0.5)
            .to('.title-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 1, 
                stagger: 0.08,
                ease: 'power4.out'
            }, 0.6)
            .to('.hero-subtitle', { 
                y: 0, 
                opacity: 1, 
                duration: 0.8,
                ease: 'power3.out'
            }, 1);

        // Hero parallax
        gsap.to('.hero-image img', {
            scrollTrigger: {
                trigger: '.hero',
                start: 'top top',
                end: 'bottom top',
                scrub: 1
            },
            y: 100,
            scale: 1.2,
            ease: 'none'
        });

        // ============================================
        // INTRO SECTION
        // ============================================
        gsap.set('.intro-content .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.intro-word', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.intro-text p', { y: 40, opacity: 0 });

        var introTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.intro-section',
                start: 'top 70%'
            }
        });

        introTl
            .to('.intro-content .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.intro-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 0.8, 
                stagger: 0.04,
                ease: 'power4.out'
            }, '-=0.3')
            .to('.intro-text p', { 
                y: 0, 
                opacity: 1, 
                duration: 0.8, 
                stagger: 0.15,
                ease: 'power3.out'
            }, '-=0.4');

        // ============================================
        // DRIVERS SECTION
        // ============================================
        gsap.set('.drivers-header .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.headline-word-0', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.driver-card', { y: 80, opacity: 0, scale: 0.95 });

        var driversTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.drivers-section',
                start: 'top 65%'
            }
        });

        driversTl
            .to('.drivers-header .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.headline-word-0', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 0.8, 
                stagger: 0.05,
                ease: 'power4.out'
            }, '-=0.3')
            .to('.driver-card', { 
                y: 0, 
                opacity: 1, 
                scale: 1,
                duration: 0.8, 
                stagger: 0.15,
                ease: 'power4.out',
                onComplete: function() {
                    animateDriverStats();
                }
            }, '-=0.3');

        // Driver card stats counter animation
        var driverStatsAnimated = false;
        function animateDriverStats() {
            if (driverStatsAnimated) return;
            driverStatsAnimated = true;
            
            var statNumbers = document.querySelectorAll('.driver-stat-number');
            statNumbers.forEach(function(stat) {
                var countStr = stat.getAttribute('data-count') || '0';
                var suffix = stat.getAttribute('data-suffix') || '';
                
                // Handle ranges like "2-3"
                if (countStr.includes('-')) {
                    gsap.to(stat, {
                        duration: 0.5,
                        onComplete: function() {
                            stat.textContent = countStr + suffix;
                        }
                    });
                } else {
                    var target = parseInt(countStr);
                    var obj = { value: 0 };
                    gsap.to(obj, {
                        value: target,
                        duration: 2,
                        ease: 'power2.out',
                        onUpdate: function() {
                            stat.textContent = Math.floor(obj.value) + suffix;
                        }
                    });
                }
            });
        }

        // Driver card hover effects with 3D tilt
        document.querySelectorAll('.driver-card').forEach(function(card) {
            card.addEventListener('mousemove', function(e) {
                var rect = card.getBoundingClientRect();
                var x = (e.clientX - rect.left) / rect.width - 0.5;
                var y = (e.clientY - rect.top) / rect.height - 0.5;
                
                gsap.to(card, {
                    rotationY: x * 10,
                    rotationX: -y * 10,
                    duration: 0.4,
                    ease: 'power2.out',
                    transformPerspective: 1000
                });
            });
            
            card.addEventListener('mouseleave', function() {
                gsap.to(card, { 
                    rotationY: 0, 
                    rotationX: 0,
                    y: 0,
                    duration: 0.6, 
                    ease: 'power2.out' 
                });
            });
        });

        // ============================================
        // BENEFITS SECTION
        // ============================================
        gsap.set('.benefits-content .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.benefits-word', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.benefits-text p', { y: 40, opacity: 0 });
        gsap.set('.tenant-types', { 
            x: 60, 
            opacity: 0,
            clipPath: 'polygon(100% 0, 100% 0, 100% 100%, 100% 100%)'
        });
        gsap.set('.tenant-item', { x: 30, opacity: 0 });

        var benefitsTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.benefits-section',
                start: 'top 65%'
            }
        });

        benefitsTl
            .to('.benefits-content .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.benefits-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 0.8, 
                stagger: 0.05,
                ease: 'power4.out'
            }, '-=0.3')
            .to('.benefits-text p', { 
                y: 0, 
                opacity: 1, 
                duration: 0.8, 
                stagger: 0.15,
                ease: 'power3.out'
            }, '-=0.4')
            .to('.tenant-types', { 
                x: 0, 
                opacity: 1,
                clipPath: 'polygon(0 0, 100% 0, 100% 100%, 0 100%)',
                duration: 1,
                ease: 'power4.out'
            }, '-=0.5')
            .to('.tenant-item', { 
                x: 0, 
                opacity: 1, 
                duration: 0.5, 
                stagger: 0.08,
                ease: 'power3.out'
            }, '-=0.4');

        // Tenant item hover
        document.querySelectorAll('.tenant-item').forEach(function(item) {
            item.addEventListener('mouseenter', function() {
                gsap.to(item, { x: 10, duration: 0.3, ease: 'power2.out' });
            });
            item.addEventListener('mouseleave', function() {
                gsap.to(item, { x: 0, duration: 0.3, ease: 'power2.out' });
            });
        });

        // ============================================
        // CRITERIA SECTION
        // ============================================
        gsap.set('.criteria-header .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.headline-word-1', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.criteria-subtitle', { y: 30, opacity: 0 });
        gsap.set('.criteria-card', { y: 60, opacity: 0, scale: 0.9 });

        var criteriaTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.criteria-section',
                start: 'top 65%'
            }
        });

        criteriaTl
            .to('.criteria-header .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.headline-word-1', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 0.8, 
                stagger: 0.05,
                ease: 'power4.out'
            }, '-=0.3')
            .to('.criteria-subtitle', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' }, '-=0.4')
            .to('.criteria-card', { 
                y: 0, 
                opacity: 1, 
                scale: 1,
                duration: 0.6, 
                stagger: 0.1,
                ease: 'back.out(1.4)'
            }, '-=0.2');

        // Criteria card hover effects
        document.querySelectorAll('.criteria-card').forEach(function(card) {
            card.addEventListener('mouseenter', function() {
                gsap.to(card, { 
                    y: -8, 
                    scale: 1.02,
                    boxShadow: '0 20px 40px rgba(0,0,0,0.1)',
                    duration: 0.3, 
                    ease: 'power2.out' 
                });
            });
            card.addEventListener('mouseleave', function() {
                gsap.to(card, { 
                    y: 0, 
                    scale: 1,
                    boxShadow: '0 0 0 rgba(0,0,0,0)',
                    duration: 0.3, 
                    ease: 'power2.out' 
                });
            });
        });

        // ============================================
        // CTA SECTION
        // ============================================
        gsap.set('.cta-word', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.cta-description', { y: 30, opacity: 0 });
        gsap.set('.cta-button', { y: 30, opacity: 0, scale: 0.9 });

        var ctaTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.cta-section',
                start: 'top 70%'
            }
        });

        ctaTl
            .to('.cta-word', {
                y: 0,
                opacity: 1,
                rotationX: 0,
                duration: 1,
                stagger: 0.08,
                ease: 'power4.out'
            })
            .to('.cta-description', {
                y: 0,
                opacity: 1,
                duration: 0.8,
                ease: 'power3.out'
            }, '-=0.5')
            .to('.cta-button', {
                y: 0,
                opacity: 1,
                scale: 1,
                duration: 0.8,
                ease: 'back.out(1.7)'
            }, '-=0.4');

        // ============================================
        // PARALLAX EFFECTS
        // ============================================
        gsap.to('.intro-headline', {
            scrollTrigger: {
                trigger: '.intro-section',
                start: 'top bottom',
                end: 'bottom top',
                scrub: 1
            },
            y: -30,
            ease: 'none'
        });

        gsap.to('.benefits-headline', {
            scrollTrigger: {
                trigger: '.benefits-section',
                start: 'top bottom',
                end: 'bottom top',
                scrub: 1
            },
            y: -20,
            ease: 'none'
        });

        console.log('âœ¨ All investment criteria page animations initialized!');
    });
</script>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

    :root {
        --padding-xl: 70px;
        --padding-lg: 56px;
        --padding-md: 48px;
        --padding-sm: 32px;
        --padding-xs: 20px;
        --max-width: 1440px;
        --color-primary: #1a1a1a;
        --color-secondary: #8a7f6e;
        --color-cream: #f5f2ed;
        --color-warm: #dbd3c6;
        --font-display: "Poppins", sans-serif;
        --font-body: "Inter", sans-serif;
        --ease: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* ============================================
       CUSTOM CURSOR
       ============================================ */
    .cursor-dot {
        position: fixed;
        width: 8px;
        height: 8px;
        background: var(--color-primary);
        border-radius: 50%;
        pointer-events: none;
        z-index: 10000;
        transform: translate(-50%, -50%);
        mix-blend-mode: difference;
    }

    .cursor-ring {
        position: fixed;
        width: 40px;
        height: 40px;
        border: 1px solid var(--color-primary);
        border-radius: 50%;
        pointer-events: none;
        z-index: 9999;
        transform: translate(-50%, -50%);
        transition: border-color 0.3s ease;
    }

    @media (max-width: 768px) {
        .cursor-dot, .cursor-ring {
            display: none;
        }
    }

    .page { 
        background: #fff; 
        overflow-x: hidden;
        cursor: none;
    }

    @media (max-width: 768px) {
        .page {
            cursor: auto;
        }
    }

    /* Hero */
    .hero { 
        position: relative; 
        width: 100%; 
        height: 50vh; 
        min-height: 400px; 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        overflow: hidden; 
    }
    
    .hero-image { 
        position: absolute; 
        inset: 0; 
        z-index: 1; 
    }
    
    .hero-image::after { 
        content: ""; 
        position: absolute; 
        inset: 0; 
        background: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.6) 100%); 
        z-index: 2; 
    }
    
    .hero-image img { 
        width: 100%; 
        height: 100%; 
        object-fit: cover;
        will-change: transform;
    }

    .hero-content { 
        position: relative; 
        z-index: 3; 
        text-align: center; 
        padding: 0 var(--padding-md); 
        display: flex; 
        flex-direction: column; 
        align-items: center; 
    }
    
    .hero-eyebrow { 
        display: flex; 
        align-items: center; 
        gap: 20px; 
        font-family: var(--font-body); 
        font-size: 12px; 
        letter-spacing: 4px; 
        text-transform: uppercase; 
        color: rgba(255,255,255,1); 
        margin-bottom: 20px; 
    }
    
    .eyebrow-line { 
