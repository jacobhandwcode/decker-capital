---
// index.astro
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="page">
    <!-- Custom Cursor -->
    <div class="cursor-dot"></div>
    <div class="cursor-ring"></div>

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-image">
        <video src="/header.mp4" autoplay loop muted playsinline></video>
      </div>
      <div class="hero-content">
        <div class="hero-eyebrow">
          <span class="eyebrow-line"></span>
          <span>Decker Capital</span>
          <span class="eyebrow-line"></span>
        </div>
        <h1 class="hero-title">
          The Nation's Leading Buyer of Industrial Real Estate
        </h1>
        <div class="subtitle-arrow">
          <p class="hero-subtitle">Invest. Elevate. Repeat.</p>
          <button class="scroll-arrow" aria-label="Scroll to next section">
            <img src="/images/down-arrow.svg" />
          </button>
        </div>
      </div>
      <div class="hero-scroll-indicator">
        <span>Scroll</span>
        <div class="scroll-line"></div>
      </div>
    </section>

    <!-- Tagline Section -->
    <section class="tagline-section" id="next-section">
      <div class="tagline-wrapper">
        <h2 class="tagline">
          <span class="tagline-word">Small</span>
          <span class="tagline-word">Bay</span>
          <span class="tagline-word">Buyers</span>
          <span class="tagline-word accent">Doing</span>
          <span class="tagline-word accent">Big</span>
          <span class="tagline-word accent">Things</span>
        </h2>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
      <div class="stats-container">
        <div class="stat-card">
          <div class="stat-frame">
            <div class="stat-inner">
              <div class="stat-number-wrapper">
                <span class="stat-number" data-count="3000000">0</span>
                <span class="stat-suffix">SF+</span>
              </div>
              <div class="stat-label">Under Management</div>
            </div>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-frame">
            <div class="stat-inner">
              <div class="stat-number-wrapper">
                <span class="stat-prefix">$</span>
                <span class="stat-number" data-count="200">0</span>
                <span class="stat-suffix">M</span>
              </div>
              <div class="stat-label">Equity Deployed</div>
            </div>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-frame">
            <div class="stat-inner">
              <div class="stat-number-wrapper">
                <span class="stat-number" data-count="15">0</span>
                <span class="stat-suffix">+</span>
              </div>
              <div class="stat-label">Years of Expertise</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Properties -->
    <section class="featured-section">
      <div class="featured-header">
        <span class="section-eyebrow">Featured</span>
        <h2 class="section-headline">Recent Acquisitions</h2>
      </div>
      <div class="featured-grid">
        <article class="featured-card">
          <div class="featured-image">
            <img src="/images/property1.png" alt="Property 1" />
            <div class="featured-overlay">
              <span class="featured-cta">View Property</span>
            </div>
          </div>
          <div class="featured-info">
            <span class="featured-location">Phoenix, AZ</span>
            <h3 class="featured-name">Westfield Industrial Park</h3>
            <div class="featured-meta">
              <span>125,000 SF</span>
              <span class="meta-divider"></span>
              <span>5 Buildings</span>
            </div>
          </div>
        </article>
        <article class="featured-card">
          <div class="featured-image">
            <img src="/images/property2.png" alt="Property 2" />
            <div class="featured-overlay">
              <span class="featured-cta">View Property</span>
            </div>
          </div>
          <div class="featured-info">
            <span class="featured-location">Dallas, TX</span>
            <h3 class="featured-name">Metro Distribution Center</h3>
            <div class="featured-meta">
              <span>89,000 SF</span>
              <span class="meta-divider"></span>
              <span>3 Buildings</span>
            </div>
          </div>
        </article>
      </div>
    </section>

    <!-- Investment Approach -->
    <section class="investment-section">
      <div class="investment-content">
        <div class="investment-text">
          <span class="section-eyebrow">Our Focus</span>
          <h2 class="investment-headline">Small-Bay Industrial Real Estate</h2>
          <p class="investment-description">
            Small-bay industrial properties typically range from 1,000-10,000
            square feet. Decker Capital specializes in the 1,000-25,000 SF
            rangeâ€”spaces that serve light manufacturing, warehousing,
            distribution, and diverse commercial uses.
          </p>
          <p class="investment-description">
            Demand continues to rise due to economic and geographic factors
            favoring sustainable supply, making these assets increasingly
            attractive to sophisticated investors.
          </p>
          <a href="/about" class="investment-link magnetic-btn">
            <span>Learn Our Approach</span>
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        <div class="investment-visual">
          <div class="investment-image-wrapper">
            <img src="/images/property-below.png" alt="Investment Property" />
          </div>
          <div class="investment-accent"></div>
        </div>
      </div>
    </section>

    <!-- Value Props -->
    <section class="value-props-section">
      <div class="value-props-grid">
        <a href="/investment-criteria" class="value-prop-card">
          <div class="value-prop-image">
            <img src="/images/property1.png" alt="Investment Criteria" />
          </div>
          <div class="value-prop-overlay"></div>
          <div class="value-prop-content">
            <h3 class="value-prop-title">Investment Criteria</h3>
            <p class="value-prop-text">
              Strategic focus on high-demand industrial spaces
            </p>
            <span class="value-prop-cta">Explore â†’</span>
          </div>
        </a>
        <a href="/about" class="value-prop-card">
          <div class="value-prop-image">
            <img src="/images/property2.png" alt="Our Approach" />
          </div>
          <div class="value-prop-overlay"></div>
          <div class="value-prop-content">
            <h3 class="value-prop-title">Our Approach</h3>
            <p class="value-prop-text">
              Proven track record of exceptional returns
            </p>
            <span class="value-prop-cta">Explore â†’</span>
          </div>
        </a>
        <a href="/team" class="value-prop-card">
          <div class="value-prop-image">
            <img src="/images/hero.png" alt="Our Team" />
          </div>
          <div class="value-prop-overlay"></div>
          <div class="value-prop-content">
            <h3 class="value-prop-title">Our Team</h3>
            <p class="value-prop-text">
              Experienced professionals committed to excellence
            </p>
            <span class="value-prop-cta">Explore â†’</span>
          </div>
        </a>
      </div>
    </section>

    <!-- Portfolio Slideshow -->
    <section class="slideshow-section">
      <div class="slideshow-container">
        <div class="slideshow-header">
          <div class="slideshow-header-left">
            <span class="section-eyebrow">Portfolio</span>
            <h2 class="slideshow-title">Our Properties</h2>
          </div>
          <a href="/portfolio" class="slideshow-view-all magnetic-btn">
            <span>View All Properties</span>
            <svg
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <div class="slideshow-wrapper">
          <div class="slideshow-main">
            <div class="slide-container">
              <div class="slide active" data-index="0">
                <img
                  src="/images/property1.png"
                  alt="Westfield Industrial Park"
                />
              </div>
              <div class="slide" data-index="1">
                <img
                  src="/images/property2.png"
                  alt="Metro Distribution Center"
                />
              </div>
              <div class="slide" data-index="2">
                <img src="/images/hero.png" alt="Summit Business Complex" />
              </div>
            </div>

            <div class="slide-overlay-gradient"></div>

            <div class="slide-info">
              <div class="slide-content active" data-index="0">
                <span class="slide-number">01 / 03</span>
                <h3 class="slide-name">Westfield Industrial Park</h3>
                <p class="slide-details">125,000 SF Â· Phoenix, AZ</p>
              </div>
              <div class="slide-content" data-index="1">
                <span class="slide-number">02 / 03</span>
                <h3 class="slide-name">Metro Distribution Center</h3>
                <p class="slide-details">89,000 SF Â· Dallas, TX</p>
              </div>
              <div class="slide-content" data-index="2">
                <span class="slide-number">03 / 03</span>
                <h3 class="slide-name">Summit Business Complex</h3>
                <p class="slide-details">210,000 SF Â· Atlanta, GA</p>
              </div>
            </div>

            <div class="slide-nav">
              <button class="nav-btn prev magnetic-btn" aria-label="Previous slide">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path d="M19 12H5M12 19l-7-7 7-7"></path>
                </svg>
              </button>
              <button class="nav-btn next magnetic-btn" aria-label="Next slide">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </button>
            </div>
          </div>

          <div class="slideshow-progress">
            <button
              class="progress-indicator active"
              data-index="0"
              aria-label="Slide 1"
            >
              <span class="progress-bar"></span>
            </button>
            <button
              class="progress-indicator"
              data-index="1"
              aria-label="Slide 2"
            >
              <span class="progress-bar"></span>
            </button>
            <button
              class="progress-indicator"
              data-index="2"
              aria-label="Slide 3"
            >
              <span class="progress-bar"></span>
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-content">
        <h2 class="cta-headline">Have a Property to Sell?</h2>
        <p class="cta-description">
          We're always looking for our next acquisition. Get in touch with our
          team today.
        </p>
        <a href="/contact" class="cta-button magnetic-btn">
          <span>Send Us A Deal</span>
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </section>
  </div>
</Layout>

<!-- GSAP & ScrollTrigger - Load via CDN with is:inline -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function() {
    // Register GSAP plugins
    gsap.registerPlugin(ScrollTrigger);
    
    console.log('ðŸš€ GSAP loaded, starting animations...');

    // ============================================
    // TEXT SPLITTING UTILITY
    // ============================================
    function splitTextIntoSpans(element, className) {
      if (!element) return [];
      var text = element.textContent;
      var words = text.trim().split(/\s+/);
      element.innerHTML = words.map(function(word) {
        return '<span class="' + className + '" style="display: inline-block;">' + word + '&nbsp;</span>';
      }).join('');
      return element.querySelectorAll('.' + className);
    }

    // Split hero title into words
    var heroTitle = document.querySelector('.hero-title');
    splitTextIntoSpans(heroTitle, 'title-word');

    // Split hero subtitle into words
    var heroSubtitle = document.querySelector('.hero-subtitle');
    splitTextIntoSpans(heroSubtitle, 'subtitle-word');

    // Split CTA headline into words
    var ctaHeadline = document.querySelector('.cta-headline');
    splitTextIntoSpans(ctaHeadline, 'cta-word');

    // ============================================
    // CUSTOM CURSOR
    // ============================================
    var cursorDot = document.querySelector('.cursor-dot');
    var cursorRing = document.querySelector('.cursor-ring');
    var mouseX = 0, mouseY = 0;
    var ringX = 0, ringY = 0;

    if (cursorDot && cursorRing && window.innerWidth > 768) {
      document.addEventListener('mousemove', function(e) {
        mouseX = e.clientX;
        mouseY = e.clientY;
        gsap.to(cursorDot, { x: mouseX, y: mouseY, duration: 0.1 });
      });

      // Smooth ring follow
      function animateCursor() {
        ringX += (mouseX - ringX) * 0.15;
        ringY += (mouseY - ringY) * 0.15;
        gsap.set(cursorRing, { x: ringX, y: ringY });
        requestAnimationFrame(animateCursor);
      }
      animateCursor();

      // Cursor hover effects
      var hoverElements = document.querySelectorAll('a, button, .featured-card, .value-prop-card');
      hoverElements.forEach(function(el) {
        el.addEventListener('mouseenter', function() {
          gsap.to(cursorRing, { scale: 1.5, borderColor: '#8a7f6e', duration: 0.3 });
          gsap.to(cursorDot, { scale: 0.5, duration: 0.3 });
        });
        el.addEventListener('mouseleave', function() {
          gsap.to(cursorRing, { scale: 1, borderColor: '#1a1a1a', duration: 0.3 });
          gsap.to(cursorDot, { scale: 1, duration: 0.3 });
        });
      });
    }

    // ============================================
    // MAGNETIC BUTTON EFFECT
    // ============================================
    var magneticBtns = document.querySelectorAll('.magnetic-btn');
    magneticBtns.forEach(function(btn) {
      btn.addEventListener('mousemove', function(e) {
        var rect = btn.getBoundingClientRect();
        var x = e.clientX - rect.left - rect.width / 2;
        var y = e.clientY - rect.top - rect.height / 2;
        gsap.to(btn, { x: x * 0.3, y: y * 0.3, duration: 0.3, ease: 'power2.out' });
      });
      btn.addEventListener('mouseleave', function() {
        gsap.to(btn, { x: 0, y: 0, duration: 0.5, ease: 'elastic.out(1, 0.3)' });
      });
    });

    // ============================================
    // HERO ANIMATIONS
    // ============================================
    var heroTl = gsap.timeline({ defaults: { ease: 'power3.out' } });
    
    // Initial states
    gsap.set('.hero-eyebrow span:not(.eyebrow-line)', { y: 30, opacity: 0 });
    gsap.set('.eyebrow-line', { scaleX: 0 });
    gsap.set('.title-word', { y: 100, opacity: 0, rotationX: -40 });
    gsap.set('.subtitle-word', { y: 40, opacity: 0 });
    gsap.set('.scroll-arrow', { y: 20, opacity: 0 });
    gsap.set('.hero-scroll-indicator', { opacity: 0 });

    heroTl
      .to('.eyebrow-line', { scaleX: 1, duration: 0.8, stagger: 0.1 }, 0.3)
      .to('.hero-eyebrow span:not(.eyebrow-line)', { y: 0, opacity: 1, duration: 0.6 }, 0.5)
      .to('.title-word', { 
        y: 0, 
        opacity: 1, 
        rotationX: 0,
        duration: 1.2, 
        stagger: 0.08,
        ease: 'power4.out'
      }, 0.7)
      .to('.subtitle-word', { 
        y: 0, 
        opacity: 1, 
        duration: 0.8, 
        stagger: 0.1,
        ease: 'back.out(1.7)'
      }, 1.4)
      .to('.scroll-arrow', { y: 0, opacity: 1, duration: 0.6 }, 1.8)
      .to('.hero-scroll-indicator', { opacity: 1, duration: 0.8 }, 2);

    // Floating scroll arrow animation
    gsap.to('.scroll-arrow', {
      y: 10,
      duration: 1.5,
      repeat: -1,
      yoyo: true,
      ease: 'power1.inOut'
    });

    // ============================================
    // TAGLINE SECTION - SPLIT TEXT REVEAL
    // ============================================
    gsap.set('.tagline-word', { 
      y: 80, 
      opacity: 0,
      rotationY: -20,
      transformOrigin: 'left center'
    });

    ScrollTrigger.create({
      trigger: '.tagline-section',
      start: 'top 80%',
      onEnter: function() {
        gsap.to('.tagline-word', {
          y: 0,
          opacity: 1,
          rotationY: 0,
          duration: 1,
          stagger: 0.08,
          ease: 'power4.out'
        });
      }
    });

    // Parallax effect on tagline
    gsap.to('.tagline', {
      scrollTrigger: {
        trigger: '.tagline-section',
        start: 'top bottom',
        end: 'bottom top',
        scrub: 1
      },
      y: -50,
      ease: 'none'
    });

    // ============================================
    // STATS SECTION - DRAMATIC COUNTER REVEAL
    // ============================================
    gsap.set('.stat-card', { 
      y: 60, 
      opacity: 0,
      scale: 0.95
    });

    var countersStarted = false;
    ScrollTrigger.create({
      trigger: '.stats-section',
      start: 'top 75%',
      onEnter: function() {
        gsap.to('.stat-card', {
          y: 0,
          opacity: 1,
          scale: 1,
          duration: 0.8,
          stagger: 0.15,
          ease: 'power3.out',
          onComplete: function() {
            if (!countersStarted) {
              countersStarted = true;
              startCounters();
            }
          }
        });
      }
    });

    // Counter animation with easing
    function startCounters() {
      var counters = document.querySelectorAll(".stat-number[data-count]");
      counters.forEach(function(counter) {
        var target = parseInt(counter.getAttribute("data-count") || "0");
        var obj = { value: 0 };
        gsap.to(obj, {
          value: target,
          duration: 2.5,
          ease: 'power2.out',
          onUpdate: function() {
            counter.textContent = Math.floor(obj.value).toLocaleString();
          }
        });
      });
    }

    // ============================================
    // FEATURED PROPERTIES - STAGGERED REVEAL
    // ============================================
    gsap.set('.featured-header', { y: 40, opacity: 0 });
    gsap.set('.featured-card', { 
      y: 80, 
      opacity: 0
    });

    var featuredTl = gsap.timeline({
      scrollTrigger: {
        trigger: '.featured-section',
        start: 'top 70%'
      }
    });

    featuredTl
      .to('.featured-header', { y: 0, opacity: 1, duration: 0.8, ease: 'power3.out' })
      .to('.featured-card', {
        y: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.2,
        ease: 'power4.out'
      }, '-=0.4');

    // Image reveal on hover with GSAP
    document.querySelectorAll('.featured-card').forEach(function(card) {
      var img = card.querySelector('.featured-image img');
      card.addEventListener('mouseenter', function() {
        gsap.to(img, { scale: 1.1, duration: 0.8, ease: 'power2.out' });
      });
      card.addEventListener('mouseleave', function() {
        gsap.to(img, { scale: 1, duration: 0.6, ease: 'power2.out' });
      });
    });

    // ============================================
    // INVESTMENT SECTION - SPLIT REVEAL
    // ============================================
    gsap.set('.investment-text > *', { y: 50, opacity: 0 });
    gsap.set('.investment-image-wrapper', { 
      clipPath: 'polygon(0 0, 0 0, 0 100%, 0 100%)',
      scale: 1.2
    });
    gsap.set('.investment-accent', { scale: 0.8, opacity: 0 });

    var investmentTl = gsap.timeline({
      scrollTrigger: {
        trigger: '.investment-section',
        start: 'top 65%'
      }
    });

    investmentTl
      .to('.investment-text > *', {
        y: 0,
        opacity: 1,
        duration: 0.8,
        stagger: 0.12,
        ease: 'power3.out'
      })
      .to('.investment-image-wrapper', {
        clipPath: 'polygon(0 0, 100% 0, 100% 100%, 0 100%)',
        scale: 1,
        duration: 1.2,
        ease: 'power4.inOut'
      }, '-=0.6')
      .to('.investment-accent', {
        scale: 1,
        opacity: 1,
        duration: 0.8,
        ease: 'back.out(1.7)'
      }, '-=0.6');

    // Parallax on investment image
    gsap.to('.investment-image-wrapper img', {
      scrollTrigger: {
        trigger: '.investment-section',
        start: 'top bottom',
        end: 'bottom top',
        scrub: 1
      },
      y: -80,
      ease: 'none'
    });

    // ============================================
    // VALUE PROPS - DRAMATIC STAGGER
    // ============================================
    gsap.set('.value-prop-card', { 
      y: 100,
      opacity: 0,
      scale: 0.9
    });

    ScrollTrigger.create({
      trigger: '.value-props-section',
      start: 'top 70%',
      onEnter: function() {
        gsap.to('.value-prop-card', {
          y: 0,
          opacity: 1,
          scale: 1,
          duration: 1,
          stagger: 0.15,
          ease: 'power4.out'
        });
      }
    });

    // Value prop hover parallax
    document.querySelectorAll('.value-prop-card').forEach(function(card) {
      var img = card.querySelector('.value-prop-image img');
      var content = card.querySelector('.value-prop-content');
      
      card.addEventListener('mousemove', function(e) {
        var rect = card.getBoundingClientRect();
        var x = (e.clientX - rect.left) / rect.width - 0.5;
        var y = (e.clientY - rect.top) / rect.height - 0.5;
        
        gsap.to(img, {
          x: x * 20,
          y: y * 20,
          duration: 0.5,
          ease: 'power2.out'
        });
        gsap.to(content, {
          x: x * -10,
          y: y * -10,
          duration: 0.5,
          ease: 'power2.out'
        });
      });
      
      card.addEventListener('mouseleave', function() {
        gsap.to(img, { x: 0, y: 0, duration: 0.6, ease: 'power2.out' });
        gsap.to(content, { x: 0, y: 0, duration: 0.6, ease: 'power2.out' });
      });
    });

    // ============================================
    // SLIDESHOW SECTION
    // ============================================
    gsap.set('.slideshow-header', { y: 40, opacity: 0 });
    gsap.set('.slideshow-main', { 
      y: 60, 
      opacity: 0
    });

    var slideshowTl = gsap.timeline({
      scrollTrigger: {
        trigger: '.slideshow-section',
        start: 'top 70%'
      }
    });

    slideshowTl
      .to('.slideshow-header', { y: 0, opacity: 1, duration: 0.8, ease: 'power3.out' })
      .to('.slideshow-main', {
        y: 0,
        opacity: 1,
        duration: 1.2,
        ease: 'power4.out'
      }, '-=0.4')
      .from('.slideshow-progress', {
        y: 20,
        opacity: 0,
        duration: 0.6,
        ease: 'power3.out'
      }, '-=0.4');

    // Slideshow Logic with GSAP transitions
    var slides = document.querySelectorAll(".slide");
    var slideContents = document.querySelectorAll(".slide-content");
    var indicators = document.querySelectorAll(".progress-indicator");
    var prevBtn = document.querySelector(".nav-btn.prev");
    var nextBtn = document.querySelector(".nav-btn.next");

    var currentIndex = 0;
    var autoplayInterval;
    var autoplayDuration = 5000;
    var isPaused = false;

    function updateSlide(newIndex) {
