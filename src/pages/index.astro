---
// index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-image">
        <img src="/images/hero.png" alt="Industrial Property" />
      </div>
      <div class="hero-content">
        <h1 class="hero-title">
          The Nation's Leading Buyer of Industrial Real Estate
        </h1>
        <p class="hero-subtitle">Invest. Elevate. Repeat.</p>
      </div>
    </section>

    <!-- Tagline Section -->
    <section class="tagline-section">
      <div class="container">
        <h2 class="tagline">Small Bay Buyers Doing Big Things</h2>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
      <div class="stats-container">
        <div class="stat-card">
          <div class="stat-number">3,000,000 <span class="additional">SF+</span></div>
          <div class="stat-description">UNDER MANAGEMENT</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-card">
          <div class="stat-number">$200<span class="additional">M</span></div>
          <div class="stat-description">EQUITY DEPLOYED</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-card">
          <div class="stat-number">15<span class="additional">+</span></div>
          <div class="stat-description">YEARS OF REAL ESTATE EXPERTISE</div>
        </div>
      </div>
    </section>

    <!-- Portfolio Showcase -->
    <section class="portfolio-showcase">
      <div class="container">
        <div class="portfolio-grid">
          <div class="portfolio-card">
            <div class="portfolio-image">
              <img src="/property-1.jpg" alt="Property 1" />
            </div>
            <div class="portfolio-label">Property 1</div>
          </div>
          <div class="portfolio-card">
            <div class="portfolio-image">
              <img src="/property-2.jpg" alt="Property 2" />
            </div>
            <div class="portfolio-label">Property 2</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Investment Approach -->
    <section class="investment-section">
      <div class="container-wide">
        <div class="investment-content">
          <h2 class="section-title">Small-Bay Industrial Real Estate: The Investment Appeal</h2>
          <p class="section-description">
            Small-bay industrial properties typically 1,000-10,000 square feet. Decker Capital specializes in the 
            1,000-25,000 SF range. These spaces serve light manufacturing, warehousing, distribution, and diverse uses 
            such as e-commerce firms, contractors, and landscapers, with demand rising due to economic and geographic 
            factors favoring sustainable supply.
          </p>
        </div>
        <div class="investment-image">
          <img src="/investment-property.jpg" alt="Investment Property" />
        </div>
      </div>
    </section>

    <!-- Value Props -->
    <section class="value-props-section">
      <div class="container">
        <div class="value-props-grid">
          <div class="value-prop-card">
            <h3 class="value-prop-title">Why Small Bay & Investment Criteria</h3>
            <p class="value-prop-text">
              Strategic focus on high-demand industrial spaces that serve essential business needs.
            </p>
          </div>
          <div class="value-prop-card">
            <h3 class="value-prop-title">How We've Become A Leader In The Space</h3>
            <p class="value-prop-text">
              Proven track record of identifying value and creating exceptional returns for our investors.
            </p>
          </div>
          <div class="value-prop-card">
            <h3 class="value-prop-title">Our Team & Company Culture</h3>
            <p class="value-prop-text">
              Experienced professionals united by a commitment to excellence and integrity.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Portfolio Slideshow -->
    <section class="slideshow-section">
      <div class="container">
        <h2 class="slideshow-title">Portfolio Highlights</h2>
        <div class="slideshow-placeholder">
          <p>Slideshow Of Projects here</p>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .page {
    background: #ffffff;
  }

  /* Hero Section */
  .hero {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

.hero-image::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0.65) 0%,
    rgba(0, 0, 0, 0.45) 40%,
    rgba(0, 0, 0, 0.65) 100%
  );
  z-index: 2;
}


  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    max-width: 1200px;
    text-align: center;
    padding: 0 80px;
  }

  .hero-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 72px;
    font-weight: 400;
    line-height: 1.2;
    color: #ffffff;
    margin: 0 0 24px 0;
    letter-spacing: -0.5px;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  /* Tagline Section */
  .tagline-section {
padding: 15px 80px;
    background: #ffffff;
  }

  .tagline {
    font-family: 'Cormorant Garamond', serif;
    font-size: 48px;
    font-weight: 400;
    line-height: 1.3;
    color: #1a1a1a;
    margin: 0;
    text-align: left;
  }

  /* Stats Section */
  .stats-section {
    padding: 0;
    background: #d9d4c8;
  }

  .stats-container {
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    max-width: 100%;
  }

  .stat-card {
    flex: 1;
    text-align: center;
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .stat-divider {
    width: 1px;
    background: #000000;
  }

  .stat-number {
    font-family: 'Cormorant Garamond', serif;
    font-size: 64px;
    font-weight: 400;
    color: #1a1a1a;
    line-height: 1;
    display: inline;
  }

  .stat-number .additional {
	font-size: 40px;
  }

  .stat-label {
    font-family: 'Cormorant Garamond', serif;
    font-size: 64px;
    font-weight: 400;
    color: #1a1a1a;
    display: inline;
    margin-left: 4px;
  }

  .stat-description {
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    font-weight: 400;
    letter-spacing: 1.5px;
    color: #1a1a1a;
    text-transform: uppercase;
    margin-top: 16px;
  }

  .container {
    max-width: 1440px;
    margin: 0 auto;
  }

  .container-wide {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 80px;
  }

  /* Portfolio Showcase */
  .portfolio-showcase {
    padding: 100px 80px;
    background: #ffffff;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
  }

  .portfolio-card {
    position: relative;
    overflow: hidden;
  }

  .portfolio-image {
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .portfolio-card:hover .portfolio-image img {
    transform: scale(1.05);
  }

  .portfolio-label {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: #1a1a1a;
    margin-top: 24px;
  }

  /* Investment Section */
  .investment-section {
    padding: 120px 0;
    background: #f8f7f4;
  }

  .investment-content {
    margin-bottom: 60px;
  }

  .section-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 42px;
    font-weight: 400;
    line-height: 1.3;
    color: #1a1a1a;
    margin: 0 0 32px 0;
  }

  .section-description {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.8;
    color: #333;
    max-width: 900px;
    margin: 0;
  }

  .investment-image {
    margin-top: 60px;
  }

  .investment-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  /* Value Props */
  .value-props-section {
    padding: 120px 80px;
    background: #ffffff;
  }

  .value-props-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 60px;
  }

  .value-prop-card {
    padding: 60px 40px;
    background: #f8f7f4;
    border: 1px solid rgba(0, 0, 0, 0.04);
    transition: all 0.4s ease;
  }

  .value-prop-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
  }

  .value-prop-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 26px;
    font-weight: 500;
    line-height: 1.4;
    color: #1a1a1a;
    margin: 0 0 20px 0;
  }

  .value-prop-text {
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    font-weight: 400;
    line-height: 1.7;
    color: #666;
    margin: 0;
  }

  /* Slideshow Section */
  .slideshow-section {
    padding: 120px 80px;
    background: #f8f7f4;
  }

  .slideshow-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 48px;
    font-weight: 400;
    color: #1a1a1a;
    text-align: center;
    margin: 0 0 80px 0;
  }

  .slideshow-placeholder {
    min-height: 500px;
    background: #ffffff;
    border: 2px dashed rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slideshow-placeholder p {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    color: #999;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .hero-title {
      font-size: 56px;
    }

    .value-props-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .portfolio-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 500px;
    }

    .hero-content {
      padding: 0 24px;
    }

    .hero-title {
      font-size: 36px;
    }

    .hero-subtitle {
      font-size: 12px;
    }

    .tagline-section {
      padding: 40px 24px 20px;
    }

    .tagline {
      font-size: 32px;
    }

    .stats-container {
      flex-direction: column;
    }

    .stat-divider {
      width: 100%;
      height: 1px;
    }

    .stat-card {
      padding: 40px 24px;
    }

    .stat-number {
      font-size: 48px;
    }

    .portfolio-showcase,
    .value-props-section,
    .slideshow-section {
      padding: 60px 24px;
    }

    .container-wide {
      padding: 0 24px;
    }

    .section-title {
      font-size: 32px;
    }

    .slideshow-title {
      font-size: 36px;
      margin-bottom: 40px;
    }
  }
</style>

<style is:global>
  ::selection {
    background: #1a1a1a;
    color: #ffffff;
  }
</style>