        </div>

        <div class="slideshow-wrapper">
          <div class="slideshow-main">
            <div class="slide-container">
              <div class="slide active" data-index="0">
                <img
                  src="/images/property1.png"
                  alt="Westfield Industrial Park"
                />
              </div>
              <div class="slide" data-index="1">
                <img
                  src="/images/property2.png"
                  alt="Metro Distribution Center"
                />
              </div>
              <div class="slide" data-index="2">
                <img src="/images/hero.png" alt="Summit Business Complex" />
              </div>
            </div>

            <div class="slide-overlay-gradient"></div>

            <div class="slide-info">
              <div class="slide-content active" data-index="0">
                <span class="slide-number">01 / 03</span>
                <h3 class="slide-name">Westfield Industrial Park</h3>
                <p class="slide-details">125,000 SF · Phoenix, AZ</p>
              </div>
              <div class="slide-content" data-index="1">
                <span class="slide-number">02 / 03</span>
                <h3 class="slide-name">Metro Distribution Center</h3>
                <p class="slide-details">89,000 SF · Dallas, TX</p>
              </div>
              <div class="slide-content" data-index="2">
                <span class="slide-number">03 / 03</span>
                <h3 class="slide-name">Summit Business Complex</h3>
                <p class="slide-details">210,000 SF · Atlanta, GA</p>
              </div>
            </div>

            <div class="slide-nav">
              <button class="nav-btn prev" aria-label="Previous slide">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path d="M19 12H5M12 19l-7-7 7-7"></path>
                </svg>
              </button>
              <button class="nav-btn next" aria-label="Next slide">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </button>
            </div>
          </div>

          <div class="slideshow-progress">
            <button
              class="progress-indicator active"
              data-index="0"
              aria-label="Slide 1"
            >
              <span class="progress-bar"></span>
            </button>
            <button
              class="progress-indicator"
              data-index="1"
              aria-label="Slide 2"
            >
              <span class="progress-bar"></span>
            </button>
            <button
              class="progress-indicator"
              data-index="2"
              aria-label="Slide 3"
            >
              <span class="progress-bar"></span>
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-content">
        <h2 class="cta-headline">Have a Property to Sell?</h2>
        <p class="cta-description">
          We're always looking for our next acquisition. Get in touch with our
          team today.
        </p>
        <a href="/contact" class="cta-button">
          <span>Send Us A Deal</span>
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </section>
  </div>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const scrollArrow = document.querySelector(".scroll-arrow");
    const nextSection = document.getElementById("next-section");
    if (scrollArrow && nextSection) {
      scrollArrow.addEventListener("click", () => {
        nextSection.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    }

    // Counter animation
    const counters = document.querySelectorAll(".stat-number[data-count]");
    const counterObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const target = entry.target as HTMLElement;
            const count = parseInt(target.getAttribute("data-count") || "0");
            animateCounter(target, count);
            counterObserver.unobserve(target);
          }
        });
      },
      { threshold: 0.5 },
    );
    counters.forEach((counter) => counterObserver.observe(counter));

    function animateCounter(element: HTMLElement, target: number) {
      const duration = 2000;
      const startTime = performance.now();
      function update(currentTime: number) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        const easeProgress = 1 - Math.pow(1 - progress, 3);
        element.textContent = Math.floor(
          target * easeProgress,
        ).toLocaleString();
        if (progress < 1) requestAnimationFrame(update);
      }
      requestAnimationFrame(update);
    }

    // Slideshow
    const slides = document.querySelectorAll(".slide");
    const slideContents = document.querySelectorAll(".slide-content");
    const indicators = document.querySelectorAll(".progress-indicator");
    const prevBtn = document.querySelector(".nav-btn.prev");
    const nextBtn = document.querySelector(".nav-btn.next");

    let currentIndex = 0;
    let autoplayInterval: ReturnType<typeof setInterval>;
    const autoplayDuration = 5000;
    let isPaused = false;

    function updateSlide(newIndex: number) {
      slides.forEach((slide) => slide.classList.remove("active", "prev"));
      slideContents.forEach((content) => content.classList.remove("active"));
      indicators.forEach((ind) => {
        ind.classList.remove("active");
        const bar = ind.querySelector(".progress-bar") as HTMLElement;
        if (bar) {
          bar.style.animation = "none";
          bar.offsetHeight;
          bar.style.animation = "";
        }
      });

      slides[currentIndex]?.classList.add("prev");
      currentIndex = newIndex;
      slides[currentIndex]?.classList.add("active");
      slideContents[currentIndex]?.classList.add("active");
      indicators[currentIndex]?.classList.add("active");
    }

    function nextSlide() {
      updateSlide((currentIndex + 1) % slides.length);
    }

    function prevSlide() {
      updateSlide((currentIndex - 1 + slides.length) % slides.length);
    }

    function startAutoplay() {
      stopAutoplay();
      autoplayInterval = setInterval(() => {
        if (!isPaused) nextSlide();
      }, autoplayDuration);
    }

    function stopAutoplay() {
      if (autoplayInterval) clearInterval(autoplayInterval);
    }

    prevBtn?.addEventListener("click", () => {
      prevSlide();
      startAutoplay();
    });
    nextBtn?.addEventListener("click", () => {
      nextSlide();
      startAutoplay();
    });

    indicators.forEach((indicator, index) => {
      indicator.addEventListener("click", () => {
        if (index !== currentIndex) {
          updateSlide(index);
          startAutoplay();
        }
      });
    });

    const slideshowWrapper = document.querySelector(".slideshow-wrapper");
    slideshowWrapper?.addEventListener("mouseenter", () => (isPaused = true));
    slideshowWrapper?.addEventListener("mouseleave", () => (isPaused = false));

    startAutoplay();
  });
</script>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
  :root {
    --padding-xl: 70px;
    --padding-lg: 56px;
    --padding-md: 48px;
    --padding-sm: 32px;
    --padding-xs: 20px;
    --max-width: 1440px;
    --color-primary: #1a1a1a;
    --color-secondary: #8a7f6e;
    --color-cream: #f5f2ed;
    --color-warm: #dbd3c6;
    --font-display: "Poppins", sans-serif;
    --font-body: "Inter", sans-serif;
    --ease: cubic-bezier(0.4, 0, 0.2, 1);
  }

  .page {
    background: #fff;
    overflow-x: hidden;
  }

  /* Animations */
  @keyframes heroZoom {
    from {
      transform: scale(1.05);
    }
    to {
      transform: scale(1.15);
    }
  }
  @keyframes scrollLine {
    0% {
      transform: scaleY(0);
      transform-origin: top;
    }
    50% {
      transform: scaleY(1);
      transform-origin: top;
    }
    50.1% {
      transform: scaleY(1);
      transform-origin: bottom;
    }
    100% {
      transform: scaleY(0);
      transform-origin: bottom;
    }
  }

  .section-eyebrow {
    font-family: var(--font-body);
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--color-secondary);
    display: block;
    margin-bottom: 12px;
  }

  /* Hero */
  .hero {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 700px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero-image::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
    z-index: 2;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    animation: heroZoom 20s ease-in-out infinite alternate;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    max-width: 1000px;
    text-align: center;
    padding: 0 var(--padding-md);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-eyebrow {
    display: flex;
    align-items: center;
    gap: 20px;
    font-family: var(--font-body);
    font-size: 12px;
    letter-spacing: 4px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 1);
    margin-bottom: 24px;
  }

  .eyebrow-line {
    width: 60px;
    height: 1px;
    background: rgba(255, 255, 255, 1);
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(40px, 6vw, 80px);
    font-weight: 400;
    line-height: 1.1;
    color: #fff;
    letter-spacing: -1px;
    margin: 0 0 24px 0;
  }

  .subtitle-arrow {
    position: relative;
    top: 80px;
  }

  .hero-subtitle {
    font-family: var(--font-body);
    font-size: 14px;
    letter-spacing: 4px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.8);
  }

  .scroll-arrow {
    background: transparent;
    color: #fff;
    cursor: pointer;
    padding: 16px;
    border-radius: 50%;
    transition: all 0.4s var(--ease);
  }

  .scroll-arrow:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(4px);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 40px;
    right: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    z-index: 3;
  }

  .hero-scroll-indicator span {
    font-family: var(--font-body);
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.6);
    writing-mode: vertical-rl;
  }

  .scroll-line {
    width: 1px;
    height: 60px;
    background: rgba(255, 255, 255, 0.3);
    animation: scrollLine 2s ease-in-out infinite;
  }

  /* Tagline */
  .tagline-section {
    padding: var(--padding-lg) var(--padding-md);
    background: #fff;
  }
  .tagline-wrapper {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .tagline {
    font-family: var(--font-display);
    font-size: clamp(36px, 5vw, 64px);
    font-weight: 400;
    line-height: 1.2;
    color: var(--color-primary);
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0 18px;
  }

  .tagline-word {
    display: inline-block;
    transition: transform 0.4s var(--ease);
  }
  .tagline-word.accent {
    font-style: italic;
    color: var(--color-secondary);
  }
  .tagline:hover .tagline-word {
    transform: translateY(-2px);
  }

  /* Stats - Half-Box Design */
  .stats-section {
    background: var(--color-warm);
    padding: var(--padding-lg) var(--padding-md);
  }

  .stats-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .stat-card {
    display: flex;
    justify-content: center;
  }

  .stat-frame {
    position: relative;
    padding: 32px 40px 40px 40px;
  }

  /* Top border - partial width */
  .stat-frame::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 70%;
    height: 2px;
    background: var(--color-primary);
  }

  /* Left + Bottom + Right partial borders */
  .stat-frame::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-left: 2px solid var(--color-primary);
    border-bottom: 2px solid var(--color-primary);
    border-right: 2px solid var(--color-primary);
    pointer-events: none;
  }

  /* Right side top cutoff overlay */
  .stat-inner {
    position: relative;
  }

  .stat-inner::before {
    content: "";
    position: absolute;
    top: -32px;
    right: -40px;
    width: 2px;
    height: 40%;
    background: #dbd3c6;
    z-index: 1;
  }

  .stat-number-wrapper {
    display: flex;
    align-items: baseline;
    gap: 2px;
  }
  .stat-prefix,
  .stat-suffix {
    font-family: var(--font-display);
    font-size: 28px;
    font-weight: 300;
    color: var(--color-primary);
  }
  .stat-prefix {
    position: relative;
    top: -12px;
    font-size: 22px;
  }
  .stat-number {
    font-family: var(--font-display);
    font-size: clamp(48px, 5vw, 72px);
    font-weight: 300;
    color: var(--color-primary);
    line-height: 1;
    letter-spacing: -2px;
  }
  .stat-label {
    font-family: var(--font-body);
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 2px;
    color: var(--color-primary);
    text-transform: uppercase;
    margin-top: 16px;
  }

  /* Featured */
  .featured-section {
    padding: var(--padding-xl) var(--padding-md);
    background: #fff;
  }
  .featured-header {
    max-width: var(--max-width);
    margin: 0 auto 40px;
  }
  .section-headline {
    font-family: var(--font-display);
    font-size: clamp(36px, 4vw, 52px);
    font-weight: 400;
    color: var(--color-primary);
    margin: 0;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    max-width: var(--max-width);
    margin: 0 auto;
  }
  .featured-card {
    position: relative;
    cursor: pointer;
  }

  .featured-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }
  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
