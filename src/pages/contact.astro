---
// contact.astro
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div class="page">
		<!-- Custom Cursor -->
		<div class="cursor-dot"></div>
		<div class="cursor-ring"></div>

		<!-- Hero Section -->
		<section class="hero">
			<div class="hero-image">
				<img src="/images/hero.png" alt="Industrial Property" />
			</div>
			<div class="hero-content">
				<div class="hero-eyebrow">
					<span class="eyebrow-line"></span>
					<span>Contact</span>
					<span class="eyebrow-line"></span>
				</div>
				<h1 class="hero-title">Send Us A Deal</h1>
				<p class="hero-subtitle">We respond within 24 hours</p>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="contact-section">
			<div class="contact-container">
				<div class="contact-grid">
					<!-- Left Column - Info -->
					<div class="contact-info">
						<span class="section-eyebrow">Get In Touch</span>
						<h2 class="contact-headline">Let's Discuss Your Property</h2>
						<p class="contact-description">
							Whether you're looking to sell, partner, or explore opportunities, 
							we'd love to hear from you. Our acquisitions team is ready to evaluate your property.
						</p>

						<div class="contact-details">
							<div class="contact-item">
								<div class="contact-icon">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
										<path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
									</svg>
								</div>
								<div class="contact-item-content">
									<span class="contact-item-label">Email</span>
									<a href="mailto:deal@deckercap.com" class="contact-item-value">deal@deckercap.com</a>
								</div>
							</div>

							<div class="contact-item">
								<div class="contact-icon">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
										<path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
									</svg>
								</div>
								<div class="contact-item-content">
									<span class="contact-item-label">Phone</span>
									<a href="tel:+13059888333" class="contact-item-value">+1 305.988.8333</a>
								</div>
							</div>

							<div class="contact-item">
								<div class="contact-icon">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
										<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
										<circle cx="12" cy="10" r="3"/>
									</svg>
								</div>
								<div class="contact-item-content">
									<span class="contact-item-label">Office</span>
									<span class="contact-item-value">Miami, FL</span>
								</div>
							</div>
						</div>

						<div class="contact-criteria">
							<h3 class="criteria-title">What We're Looking For</h3>
							<ul class="criteria-list">
								<li>
									<span class="criteria-check">âœ“</span>
									<span>Small-bay industrial (1,000 - 25,000 SF)</span>
								</li>
								<li>
									<span class="criteria-check">âœ“</span>
									<span>Southeast US markets preferred</span>
								</li>
								<li>
									<span class="criteria-check">âœ“</span>
									<span>Value-add opportunities</span>
								</li>
								<li>
									<span class="criteria-check">âœ“</span>
									<span>Multi-tenant flex properties</span>
								</li>
							</ul>
						</div>
					</div>

					<!-- Right Column - Form -->
					<div class="contact-form-wrapper">
						<form class="contact-form" id="contactForm">
							<div class="form-row">
								<div class="form-group">
									<label for="firstName">First Name <span class="required">*</span></label>
									<input type="text" id="firstName" name="firstName" required />
								</div>
								<div class="form-group">
									<label for="lastName">Last Name <span class="required">*</span></label>
									<input type="text" id="lastName" name="lastName" required />
								</div>
							</div>

							<div class="form-row">
								<div class="form-group">
									<label for="email">Email Address <span class="required">*</span></label>
									<input type="email" id="email" name="email" required />
								</div>
								<div class="form-group">
									<label for="phone">Phone Number</label>
									<input type="tel" id="phone" name="phone" />
								</div>
							</div>

							<div class="form-group">
								<label for="propertyType">Property Type</label>
								<select id="propertyType" name="propertyType">
									<option value="" disabled selected>Select property type</option>
									<option value="warehouse">Warehouse</option>
									<option value="distribution">Distribution Center</option>
									<option value="manufacturing">Manufacturing Facility</option>
									<option value="flex">Flex Space</option>
									<option value="multi-tenant">Multi-Tenant Industrial</option>
									<option value="other">Other</option>
								</select>
							</div>

							<div class="form-row">
								<div class="form-group">
									<label for="squareFootage">Square Footage</label>
									<input type="text" id="squareFootage" name="squareFootage" placeholder="e.g., 15,000 SF" />
								</div>
								<div class="form-group">
									<label for="location">Property Location</label>
									<input type="text" id="location" name="location" placeholder="City, State" />
								</div>
							</div>

							<div class="form-group">
								<label for="message">Tell Us About Your Property</label>
								<textarea id="message" name="message" rows="5" placeholder="Property details, asking price, timeline, or any other relevant information..."></textarea>
							</div>

							<button type="submit" class="submit-btn magnetic-btn">
								<span class="btn-text">Submit Inquiry</span>
								<span class="btn-arrow">
									<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
										<path d="M5 12h14M12 5l7 7-7 7"/>
									</svg>
								</span>
							</button>

							<p class="form-disclaimer">
								By submitting this form, you agree to our privacy policy. We'll never share your information with third parties.
							</p>
						</form>
					</div>
				</div>
			</div>
		</section>

		<!-- Map Section -->
		<section class="map-section">
			<div class="map-overlay">
				<div class="map-card">
					<h3 class="map-card-title">Decker Capital</h3>
					<p class="map-card-address">Miami, Florida</p>
					<a href="mailto:deal@deckercap.com" class="map-card-link">deal@deckercap.com</a>
				</div>
			</div>
			<div class="map-placeholder">
				<img src="/images/hero.png" alt="Miami Office Location" />
			</div>
		</section>
	</div>
</Layout>

<!-- GSAP & ScrollTrigger -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

<script is:inline>
	document.addEventListener('DOMContentLoaded', function() {
		gsap.registerPlugin(ScrollTrigger);
		
		console.log('ðŸš€ GSAP loaded, starting contact page animations...');

		// ============================================
		// TEXT SPLITTING UTILITY
		// ============================================
		function splitTextIntoSpans(element, className) {
			if (!element) return [];
			var text = element.textContent;
			var words = text.trim().split(/\s+/);
			element.innerHTML = words.map(function(word) {
				return '<span class="' + className + '" style="display: inline-block;">' + word + '&nbsp;</span>';
			}).join('');
			return element.querySelectorAll('.' + className);
		}

		// Split hero title
		var heroTitle = document.querySelector('.hero-title');
		splitTextIntoSpans(heroTitle, 'title-word');

		// Split contact headline
		var contactHeadline = document.querySelector('.contact-headline');
		splitTextIntoSpans(contactHeadline, 'headline-word');

		// ============================================
		// CUSTOM CURSOR
		// ============================================
		var cursorDot = document.querySelector('.cursor-dot');
		var cursorRing = document.querySelector('.cursor-ring');
		var mouseX = 0, mouseY = 0;
		var ringX = 0, ringY = 0;

		if (cursorDot && cursorRing && window.innerWidth > 768) {
			document.addEventListener('mousemove', function(e) {
				mouseX = e.clientX;
				mouseY = e.clientY;
				gsap.to(cursorDot, { x: mouseX, y: mouseY, duration: 0.1 });
			});

			function animateCursor() {
				ringX += (mouseX - ringX) * 0.15;
				ringY += (mouseY - ringY) * 0.15;
				gsap.set(cursorRing, { x: ringX, y: ringY });
				requestAnimationFrame(animateCursor);
			}
			animateCursor();

			var hoverElements = document.querySelectorAll('a, button, .contact-item, .form-group input, .form-group select, .form-group textarea, .map-card');
			hoverElements.forEach(function(el) {
				el.addEventListener('mouseenter', function() {
					gsap.to(cursorRing, { scale: 1.5, borderColor: '#8a7f6e', duration: 0.3 });
					gsap.to(cursorDot, { scale: 0.5, duration: 0.3 });
				});
				el.addEventListener('mouseleave', function() {
					gsap.to(cursorRing, { scale: 1, borderColor: '#1a1a1a', duration: 0.3 });
					gsap.to(cursorDot, { scale: 1, duration: 0.3 });
				});
			});
		}

		// ============================================
		// MAGNETIC BUTTON EFFECT
		// ============================================
		var magneticBtns = document.querySelectorAll('.magnetic-btn');
		magneticBtns.forEach(function(btn) {
			btn.addEventListener('mousemove', function(e) {
				var rect = btn.getBoundingClientRect();
				var x = e.clientX - rect.left - rect.width / 2;
				var y = e.clientY - rect.top - rect.height / 2;
				gsap.to(btn, { x: x * 0.3, y: y * 0.3, duration: 0.3, ease: 'power2.out' });
			});
			btn.addEventListener('mouseleave', function() {
				gsap.to(btn, { x: 0, y: 0, duration: 0.5, ease: 'elastic.out(1, 0.3)' });
			});
		});

		// ============================================
		// HERO ANIMATIONS
		// ============================================
		var heroTl = gsap.timeline({ defaults: { ease: 'power3.out' } });
		
		gsap.set('.hero-eyebrow span:not(.eyebrow-line)', { y: 30, opacity: 0 });
		gsap.set('.eyebrow-line', { scaleX: 0 });
		gsap.set('.title-word', { y: 80, opacity: 0, rotationX: -40 });
		gsap.set('.hero-subtitle', { y: 30, opacity: 0 });

		heroTl
			.to('.eyebrow-line', { scaleX: 1, duration: 0.8, stagger: 0.1 }, 0.3)
			.to('.hero-eyebrow span:not(.eyebrow-line)', { y: 0, opacity: 1, duration: 0.6 }, 0.5)
			.to('.title-word', { 
				y: 0, 
				opacity: 1, 
				rotationX: 0,
				duration: 1, 
				stagger: 0.08,
				ease: 'power4.out'
			}, 0.6)
			.to('.hero-subtitle', { 
				y: 0, 
				opacity: 1, 
				duration: 0.8,
				ease: 'power3.out'
			}, 1);

		// Hero parallax
		gsap.to('.hero-image img', {
			scrollTrigger: {
				trigger: '.hero',
				start: 'top top',
				end: 'bottom top',
				scrub: 1
			},
			y: 100,
			scale: 1.2,
			ease: 'none'
		});

		// ============================================
		// CONTACT INFO SECTION
		// ============================================
		gsap.set('.contact-info .section-eyebrow', { y: 30, opacity: 0 });
		gsap.set('.headline-word', { y: 60, opacity: 0, rotationX: -30 });
		gsap.set('.contact-description', { y: 30, opacity: 0 });
		gsap.set('.contact-item', { x: -40, opacity: 0 });
		gsap.set('.contact-criteria', { 
			y: 40, 
			opacity: 0,
			clipPath: 'polygon(0 0, 0 0, 0 100%, 0 100%)'
		});

		var contactInfoTl = gsap.timeline({
			scrollTrigger: {
				trigger: '.contact-section',
				start: 'top 70%'
			}
		});

		contactInfoTl
			.to('.contact-info .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
			.to('.headline-word', { 
				y: 0, 
				opacity: 1, 
				rotationX: 0,
				duration: 0.8, 
				stagger: 0.05,
				ease: 'power4.out'
			}, '-=0.3')
			.to('.contact-description', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' }, '-=0.4')
			.to('.contact-item', { 
				x: 0, 
				opacity: 1, 
				duration: 0.7, 
				stagger: 0.12,
				ease: 'power3.out'
			}, '-=0.3')
			.to('.contact-criteria', { 
				y: 0, 
				opacity: 1,
				clipPath: 'polygon(0 0, 100% 0, 100% 100%, 0 100%)',
				duration: 0.8,
				ease: 'power4.out'
			}, '-=0.3');

		// Criteria list items stagger
		gsap.set('.criteria-list li', { x: -20, opacity: 0 });
		ScrollTrigger.create({
			trigger: '.contact-criteria',
			start: 'top 80%',
			onEnter: function() {
				gsap.to('.criteria-list li', {
					x: 0,
					opacity: 1,
					duration: 0.5,
					stagger: 0.1,
					ease: 'power3.out',
					delay: 0.4
				});
			}
		});

		// Contact item hover effects
		document.querySelectorAll('.contact-item').forEach(function(item) {
			item.addEventListener('mouseenter', function() {
				gsap.to(item, { x: 10, duration: 0.3, ease: 'power2.out' });
			});
			item.addEventListener('mouseleave', function() {
				gsap.to(item, { x: 0, duration: 0.3, ease: 'power2.out' });
			});
		});

		// ============================================
		// FORM ANIMATIONS
		// ============================================
		gsap.set('.contact-form-wrapper', { 
			y: 60, 
			opacity: 0,
			rotationY: -5
		});
		gsap.set('.form-group', { y: 30, opacity: 0 });
		gsap.set('.submit-btn', { y: 20, opacity: 0, scale: 0.95 });
		gsap.set('.form-disclaimer', { y: 20, opacity: 0 });

		var formTl = gsap.timeline({
			scrollTrigger: {
				trigger: '.contact-form-wrapper',
				start: 'top 75%'
			}
		});

		formTl
			.to('.contact-form-wrapper', { 
				y: 0, 
				opacity: 1,
				rotationY: 0,
				duration: 1,
				ease: 'power4.out'
			})
			.to('.form-group', { 
				y: 0, 
				opacity: 1, 
				duration: 0.6, 
				stagger: 0.08,
				ease: 'power3.out'
			}, '-=0.5')
			.to('.submit-btn', { 
				y: 0, 
				opacity: 1, 
				scale: 1,
				duration: 0.6,
				ease: 'back.out(1.7)'
			}, '-=0.2')
			.to('.form-disclaimer', { 
				y: 0, 
				opacity: 1, 
				duration: 0.5,
				ease: 'power3.out'
			}, '-=0.2');

		// Form input focus animations
		var formInputs = document.querySelectorAll('.form-group input, .form-group select, .form-group textarea');
		formInputs.forEach(function(input) {
			input.addEventListener('focus', function() {
				var parent = input.parentElement;
				parent.classList.add('focused');
				gsap.to(parent, { 
					scale: 1.02, 
					duration: 0.3, 
					ease: 'power2.out' 
				});
				gsap.to(input, { 
					borderColor: '#1a1a1a', 
					boxShadow: '0 8px 30px rgba(0,0,0,0.12)',
					duration: 0.3 
				});
			});
			input.addEventListener('blur', function() {
				var parent = input.parentElement;
				parent.classList.remove('focused');
				gsap.to(parent, { 
					scale: 1, 
					duration: 0.3, 
					ease: 'power2.out' 
				});
				gsap.to(input, { 
					borderColor: 'rgba(0,0,0,0.1)', 
					boxShadow: '0 0 0 rgba(0,0,0,0)',
					duration: 0.3 
				});
			});
		});

		// ============================================
		// MAP SECTION
		// ============================================
		gsap.set('.map-card', { 
			y: 60, 
			opacity: 0,
			scale: 0.9
		});
		gsap.set('.map-placeholder img', { 
			scale: 1.1
		});

		var mapTl = gsap.timeline({
			scrollTrigger: {
				trigger: '.map-section',
				start: 'top 75%'
			}
		});

		mapTl
			.to('.map-card', { 
				y: 0, 
				opacity: 1,
				scale: 1,
				duration: 1,
				ease: 'power4.out'
			});

		// Map parallax
		gsap.to('.map-placeholder img', {
			scrollTrigger: {
				trigger: '.map-section',
				start: 'top bottom',
				end: 'bottom top',
				scrub: 1
			},
			y: -50,
			ease: 'none'
		});

		// Map card hover effect
		var mapCard = document.querySelector('.map-card');
		if (mapCard) {
			mapCard.addEventListener('mouseenter', function() {
				gsap.to(mapCard, { 
					y: -10, 
					boxShadow: '0 30px 80px rgba(0,0,0,0.25)',
					duration: 0.4,
					ease: 'power2.out'
				});
			});
			mapCard.addEventListener('mouseleave', function() {
				gsap.to(mapCard, { 
					y: 0, 
					boxShadow: '0 20px 60px rgba(0,0,0,0.15)',
					duration: 0.4,
					ease: 'power2.out'
				});
			});
		}

		// ============================================
		// FORM SUBMISSION HANDLING
		// ============================================
		var form = document.getElementById('contactForm');
		
		if (form) {
			form.addEventListener('submit', function(e) {
				e.preventDefault();
				var formData = new FormData(form);
				console.log('Form submitted:', Object.fromEntries(formData));
				
				var btn = form.querySelector('.submit-btn');
				var btnText = btn.querySelector('.btn-text');
				var btnArrow = btn.querySelector('.btn-arrow');
				var originalText = btnText.textContent;
				
				// Loading animation
				gsap.to(btnArrow, { rotation: 360, duration: 0.5, repeat: -1, ease: 'none' });
				btn.classList.add('loading');
				btnText.textContent = 'Sending...';
				
				setTimeout(function() {
					gsap.killTweensOf(btnArrow);
					gsap.to(btnArrow, { rotation: 0, duration: 0.3 });
					
					btn.classList.remove('loading');
					btn.classList.add('success');
					btnText.textContent = 'Sent Successfully';
					
					// Success animation
					gsap.fromTo(btn, 
						{ scale: 1 },
						{ scale: 1.05, duration: 0.2, yoyo: true, repeat: 1, ease: 'power2.out' }
					);
					
					setTimeout(function() {
						btnText.textContent = originalText;
						btn.classList.remove('success');
						form.reset();
						
						// Reset form fields animation
						gsap.fromTo('.form-group input, .form-group select, .form-group textarea',
							{ backgroundColor: '#fff' },
							{ backgroundColor: '#fff', duration: 0.3 }
						);
					}, 3000);
				}, 1500);
			});
		}

		console.log('âœ¨ All contact page animations initialized!');
	});
</script>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

	:root {
		--padding-xl: 70px;
		--padding-lg: 56px;
		--padding-md: 48px;
		--padding-sm: 32px;
		--padding-xs: 20px;
		--max-width: 1440px;
		--color-primary: #1a1a1a;
		--color-secondary: #8a7f6e;
		--color-cream: #f5f2ed;
		--color-warm: #dbd3c6;
		--font-display: "Poppins", sans-serif;
		--font-body: "Inter", sans-serif;
		--ease: cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* ============================================
	   CUSTOM CURSOR
	   ============================================ */
	.cursor-dot {
		position: fixed;
		width: 8px;
		height: 8px;
		background: var(--color-primary);
		border-radius: 50%;
		pointer-events: none;
		z-index: 10000;
		transform: translate(-50%, -50%);
		mix-blend-mode: difference;
	}

	.cursor-ring {
		position: fixed;
		width: 40px;
		height: 40px;
		border: 1px solid var(--color-primary);
		border-radius: 50%;
		pointer-events: none;
		z-index: 9999;
		transform: translate(-50%, -50%);
		transition: border-color 0.3s ease;
	}

	@media (max-width: 768px) {
		.cursor-dot, .cursor-ring {
			display: none;
		}
	}

	.page { 
		background: #fff; 
		overflow-x: hidden;
		cursor: none;
	}

	@media (max-width: 768px) {
		.page {
			cursor: auto;
		}
	}

	/* Hero */
	.hero {
		position: relative;
		width: 100%;
		height: 50vh;
		min-height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
	}

	.hero-image {
		position: absolute;
		inset: 0;
		z-index: 1;
	}

	.hero-image::after {
		content: "";
		position: absolute;
		inset: 0;
		background: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.6) 100%);
		z-index: 2;
	}

	.hero-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		will-change: transform;
	}

	.hero-content {
		position: relative;
