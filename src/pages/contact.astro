---
// contact.astro
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div class="page">
		<!-- Hero Section -->
		<section class="hero">
			<div class="hero-image">
				<img src="/images/hero.png" alt="Industrial Property" />
			</div>
			<div class="hero-content">
				<h1 class="hero-title">Send Us A Deal</h1>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="contact-section">
			<div class="contact-container">
				<div class="contact-intro">
					<span class="contact-eyebrow">Get In Touch</span>
					<h2 class="contact-headline">Let's Discuss Your Property</h2>
					<p class="contact-description">
						Whether you're looking to sell, partner, or explore opportunities, 
						we'd love to hear from you. Our team responds within 24 hours.
					</p>
				</div>

				<form class="contact-form" id="contactForm">
					<div class="form-row">
						<div class="form-group">
							<label for="firstName">First Name</label>
							<input type="text" id="firstName" name="firstName" required />
						</div>
						<div class="form-group">
							<label for="lastName">Last Name</label>
							<input type="text" id="lastName" name="lastName" required />
						</div>
					</div>

					<div class="form-row">
						<div class="form-group">
							<label for="email">Email Address</label>
							<input type="email" id="email" name="email" required />
						</div>
						<div class="form-group">
							<label for="phone">Phone Number</label>
							<input type="tel" id="phone" name="phone" />
						</div>
					</div>

					<div class="form-group full-width">
						<label for="propertyType">Property Type</label>
						<select id="propertyType" name="propertyType">
							<option value="" disabled selected>Select property type</option>
							<option value="warehouse">Warehouse</option>
							<option value="distribution">Distribution Center</option>
							<option value="manufacturing">Manufacturing Facility</option>
							<option value="flex">Flex Space</option>
							<option value="multi-tenant">Multi-Tenant Industrial</option>
							<option value="other">Other</option>
						</select>
					</div>

					<div class="form-row">
						<div class="form-group">
							<label for="squareFootage">Square Footage</label>
							<input type="text" id="squareFootage" name="squareFootage" placeholder="e.g., 15,000 SF" />
						</div>
						<div class="form-group">
							<label for="location">Property Location</label>
							<input type="text" id="location" name="location" placeholder="City, State" />
						</div>
					</div>

					<div class="form-group full-width">
						<label for="message">Tell Us About Your Property</label>
						<textarea id="message" name="message" rows="5" placeholder="Property details, asking price, timeline, or any other relevant information..."></textarea>
					</div>

					<button type="submit" class="submit-btn">
						<span class="btn-text">Submit Inquiry</span>
						<span class="btn-arrow">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</span>
					</button>
				</form>
			</div>
		</section>
	</div>
</Layout>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const form = document.getElementById('contactForm') as HTMLFormElement;
		
		if (form) {
			form.addEventListener('submit', (e) => {
				e.preventDefault();
				// Handle form submission
				const formData = new FormData(form);
				console.log('Form submitted:', Object.fromEntries(formData));
				
				// Show success state
				const btn = form.querySelector('.submit-btn') as HTMLButtonElement;
				const btnText = btn.querySelector('.btn-text') as HTMLSpanElement;
				const originalText = btnText.textContent;
				
				btnText.textContent = 'Sent Successfully';
				btn.classList.add('success');
				
				setTimeout(() => {
					btnText.textContent = originalText;
					btn.classList.remove('success');
					form.reset();
				}, 3000);
			});
		}
	});
</script>

<style>
	/* ===== CSS Variables for Consistent Spacing ===== */
	:root {
		--padding-desktop: 60px;
		--padding-tablet: 40px;
		--padding-mobile: 24px;
		--section-padding-y: 80px;
		--section-padding-y-mobile: 60px;
		--max-width: 1400px;
	}

	.page {
		background: #ffffff;
	}

	/* Hero Section */
	.hero {
		position: relative;
		width: 100%;
		height: 50vh;
		min-height: 400px;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.hero-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
	}

	.hero-image::after {
		content: "";
		position: absolute;
		inset: 0;
		background: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 0.65) 0%,
			rgba(0, 0, 0, 0.45) 40%,
			rgba(0, 0, 0, 0.65) 100%
		);
		z-index: 2;
	}

	.hero-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.hero-content {
		position: relative;
		z-index: 3;
		text-align: center;
		padding: 0 var(--padding-desktop);
	}

	.hero-title {
		font-family: "Cormorant Garamond", serif;
		font-size: 72px;
		font-weight: 400;
		line-height: 1.2;
		color: #ffffff;
		letter-spacing: -0.5px;
		text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
		margin: 0;
	}

	/* Contact Section */
	.contact-section {
		padding: var(--section-padding-y) var(--padding-desktop);
		background: #ffffff;
	}

	.contact-container {
		max-width: 900px;
		margin: 0 auto;
	}

	.contact-intro {
		text-align: center;
		margin-bottom: 50px;
	}

	.contact-eyebrow {
		font-family: 'Inter', sans-serif;
		font-size: 11px;
		font-weight: 500;
		letter-spacing: 3px;
		text-transform: uppercase;
		color: #8a7f6e;
		display: block;
		margin-bottom: 16px;
	}

	.contact-headline {
		font-family: 'Cormorant Garamond', serif;
		font-size: 48px;
		font-weight: 400;
		color: #1a1a1a;
		margin: 0 0 20px 0;
		letter-spacing: -0.5px;
	}

	.contact-description {
		font-family: 'Inter', sans-serif;
		font-size: 16px;
		font-weight: 400;
		line-height: 1.7;
		color: #666;
		max-width: 500px;
		margin: 0 auto;
	}

	/* Form Styles */
	.contact-form {
		background: #f9f7f4;
		padding: 50px;
		border: 1px solid rgba(0, 0, 0, 0.06);
	}

	.form-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 24px;
		margin-bottom: 24px;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group.full-width {
		grid-column: 1 / -1;
		margin-bottom: 24px;
	}

	.form-group label {
		font-family: 'Inter', sans-serif;
		font-size: 12px;
		font-weight: 500;
		letter-spacing: 1px;
		text-transform: uppercase;
		color: #1a1a1a;
		margin-bottom: 10px;
	}

	.form-group input,
	.form-group select,
	.form-group textarea {
		font-family: 'Inter', sans-serif;
		font-size: 15px;
		padding: 16px 20px;
		border: 1px solid rgba(0, 0, 0, 0.12);
		background: #ffffff;
		color: #1a1a1a;
		transition: all 0.3s ease;
		outline: none;
	}

	.form-group input::placeholder,
	.form-group textarea::placeholder {
		color: #999;
	}

	.form-group input:focus,
	.form-group select:focus,
	.form-group textarea:focus {
		border-color: #1a1a1a;
		box-shadow: 0 0 0 3px rgba(26, 26, 26, 0.05);
	}

	.form-group select {
		cursor: pointer;
		appearance: none;
		background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1.5L6 6.5L11 1.5' stroke='%231a1a1a' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
		background-repeat: no-repeat;
		background-position: right 20px center;
		padding-right: 50px;
	}

	.form-group textarea {
		resize: vertical;
		min-height: 140px;
	}

	.submit-btn {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		font-family: 'Inter', sans-serif;
		font-size: 13px;
		font-weight: 500;
		letter-spacing: 1.5px;
		text-transform: uppercase;
		color: #ffffff;
		background: #1a1a1a;
		border: none;
		padding: 20px 40px;
		cursor: pointer;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		margin-top: 10px;
	}

	.submit-btn:hover {
		background: #333;
		transform: translateY(-2px);
		box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
	}

	.submit-btn.success {
		background: #2d5a3d;
	}

	.btn-arrow {
		display: flex;
		transition: transform 0.3s ease;
	}

	.submit-btn:hover .btn-arrow {
		transform: translateX(4px);
	}

	/* ===== Tablet Responsive ===== */
	@media (max-width: 1024px) {
		.contact-section {
			padding: 60px var(--padding-tablet);
		}

		.contact-form {
			padding: 40px;
		}

		.contact-headline {
			font-size: 40px;
		}
	}

	/* ===== Mobile Responsive ===== */
	@media (max-width: 768px) {
		.hero {
			height: 40vh;
			min-height: 300px;
		}

		.hero-content {
			padding: 0 var(--padding-mobile);
		}

		.hero-title {
			font-size: 36px;
		}

		.contact-section {
			padding: var(--section-padding-y-mobile) var(--padding-mobile);
		}

		.contact-intro {
			margin-bottom: 40px;
		}

		.contact-headline {
			font-size: 32px;
		}

		.contact-description {
			font-size: 15px;
		}

		.contact-form {
			padding: 32px var(--padding-mobile);
		}

		.form-row {
			grid-template-columns: 1fr;
			gap: 16px;
			margin-bottom: 16px;
		}

		.form-group.full-width {
			margin-bottom: 16px;
		}

		.form-group input,
		.form-group select,
		.form-group textarea {
			padding: 14px 16px;
			font-size: 14px;
		}

		.submit-btn {
			width: 100%;
			justify-content: center;
			padding: 18px 32px;
		}
	}
</style>

<style is:global>
	::selection {
		background: #1a1a1a;
		color: #ffffff;
	}
</style>