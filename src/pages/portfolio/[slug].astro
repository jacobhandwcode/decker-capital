            });
            backLink.addEventListener('mouseleave', function() {
                gsap.to(backLink, { x: 0, duration: 0.3, ease: 'power2.out' });
                gsap.to(backLink.querySelector('svg'), { x: 0, duration: 0.3, ease: 'power2.out' });
            });
        }

        console.log('âœ¨ All property detail page animations initialized!');
    });
</script>

