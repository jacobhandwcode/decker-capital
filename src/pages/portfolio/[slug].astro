                <p class="bottom-cta-text">We're always looking to expand our portfolio with quality small-bay industrial assets.</p>
                <a href="/contact" class="bottom-cta-button magnetic-btn">
                    <span>Send Us A Deal</span>
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </section>
    </div>
</Layout>

<!-- GSAP & ScrollTrigger -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

<script is:inline>
    document.addEventListener("DOMContentLoaded", function() {
        gsap.registerPlugin(ScrollTrigger);
        
        console.log('ðŸš€ GSAP loaded, starting property detail page animations...');

        // ============================================
        // TEXT SPLITTING UTILITY
        // ============================================
        function splitTextIntoSpans(element, className) {
            if (!element) return [];
            var text = element.textContent;
            var words = text.trim().split(/\s+/);
            element.innerHTML = words.map(function(word) {
                return '<span class="' + className + '" style="display: inline-block;">' + word + '&nbsp;</span>';
            }).join('');
            return element.querySelectorAll('.' + className);
        }

        // Split property name
        var propertyName = document.querySelector('.property-name');
        splitTextIntoSpans(propertyName, 'name-word');

        // Split section title
        var sectionTitle = document.querySelector('.section-title');
        splitTextIntoSpans(sectionTitle, 'title-word');

        // Split bottom CTA headline
        var bottomCtaHeadline = document.querySelector('.bottom-cta-headline');
        splitTextIntoSpans(bottomCtaHeadline, 'cta-word');

        // ============================================
        // CUSTOM CURSOR
        // ============================================
        var cursorDot = document.querySelector('.cursor-dot');
        var cursorRing = document.querySelector('.cursor-ring');
        var mouseX = 0, mouseY = 0;
        var ringX = 0, ringY = 0;

        if (cursorDot && cursorRing && window.innerWidth > 768) {
            document.addEventListener('mousemove', function(e) {
                mouseX = e.clientX;
                mouseY = e.clientY;
                gsap.to(cursorDot, { x: mouseX, y: mouseY, duration: 0.1 });
            });

            function animateCursor() {
                ringX += (mouseX - ringX) * 0.15;
                ringY += (mouseY - ringY) * 0.15;
                gsap.set(cursorRing, { x: ringX, y: ringY });
                requestAnimationFrame(animateCursor);
            }
            animateCursor();

            var hoverElements = document.querySelectorAll('a, button, .info-card, .cta-card, .info-item');
            hoverElements.forEach(function(el) {
                el.addEventListener('mouseenter', function() {
                    gsap.to(cursorRing, { scale: 1.5, borderColor: '#8a7f6e', duration: 0.3 });
                    gsap.to(cursorDot, { scale: 0.5, duration: 0.3 });
                });
                el.addEventListener('mouseleave', function() {
                    gsap.to(cursorRing, { scale: 1, borderColor: '#1a1a1a', duration: 0.3 });
                    gsap.to(cursorDot, { scale: 1, duration: 0.3 });
                });
            });
        }

        // ============================================
        // MAGNETIC BUTTON EFFECT
        // ============================================
        var magneticBtns = document.querySelectorAll('.magnetic-btn');
        magneticBtns.forEach(function(btn) {
            btn.addEventListener('mousemove', function(e) {
                var rect = btn.getBoundingClientRect();
                var x = e.clientX - rect.left - rect.width / 2;
                var y = e.clientY - rect.top - rect.height / 2;
                gsap.to(btn, { x: x * 0.3, y: y * 0.3, duration: 0.3, ease: 'power2.out' });
            });
            btn.addEventListener('mouseleave', function() {
                gsap.to(btn, { x: 0, y: 0, duration: 0.5, ease: 'elastic.out(1, 0.3)' });
            });
        });

        // ============================================
        // HERO ANIMATIONS
        // ============================================
        var heroTl = gsap.timeline({ defaults: { ease: 'power3.out' } });
        
        gsap.set('.back-link', { x: -30, opacity: 0 });
        gsap.set('.property-type', { y: 30, opacity: 0, scale: 0.9 });
        gsap.set('.name-word', { y: 80, opacity: 0, rotationX: -40 });
        gsap.set('.property-location', { y: 30, opacity: 0 });

        heroTl
            .to('.back-link', { x: 0, opacity: 1, duration: 0.6 }, 0.3)
            .to('.property-type', { y: 0, opacity: 1, scale: 1, duration: 0.6, ease: 'back.out(1.7)' }, 0.4)
            .to('.name-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 1, 
                stagger: 0.06,
                ease: 'power4.out'
            }, 0.5)
            .to('.property-location', { 
                y: 0, 
                opacity: 1, 
                duration: 0.8,
                ease: 'power3.out'
            }, 0.9);

        // Hero image parallax
        gsap.to('.hero-image img', {
            scrollTrigger: {
                trigger: '.hero',
                start: 'top top',
                end: 'bottom top',
                scrub: 1
            },
            y: 100,
            scale: 1.15,
            ease: 'none'
        });

        // ============================================
        // STATS BAR ANIMATIONS
        // ============================================
        gsap.set('.stat-item', { y: 30, opacity: 0 });
        gsap.set('.stat-divider', { scaleY: 0 });

        var statsTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.stats-bar',
                start: 'top 85%'
            }
        });

        statsTl
            .to('.stat-item', {
                y: 0,
                opacity: 1,
                duration: 0.6,
                stagger: 0.08,
                ease: 'power3.out'
            })
            .to('.stat-divider', {
                scaleY: 1,
                duration: 0.4,
                stagger: 0.08,
                ease: 'power3.out'
            }, '-=0.4');

        // Stat item hover
        var statItems = document.querySelectorAll('.stat-item');
        statItems.forEach(function(item) {
            item.addEventListener('mouseenter', function() {
                gsap.to(item, { y: -5, duration: 0.3, ease: 'power2.out' });
                gsap.to(item.querySelector('.stat-value'), { scale: 1.1, duration: 0.3, ease: 'power2.out' });
            });
            item.addEventListener('mouseleave', function() {
                gsap.to(item, { y: 0, duration: 0.3, ease: 'power2.out' });
                gsap.to(item.querySelector('.stat-value'), { scale: 1, duration: 0.3, ease: 'power2.out' });
            });
        });

        // ============================================
        // CONTENT SECTION ANIMATIONS
        // ============================================
        // Description block
        gsap.set('.description-block .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.title-word', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.description', { y: 40, opacity: 0 });

        var descriptionTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.description-block',
                start: 'top 70%'
            }
        });

        descriptionTl
            .to('.description-block .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.title-word', { 
                y: 0, 
                opacity: 1, 
                rotationX: 0,
                duration: 0.8, 
                stagger: 0.05,
                ease: 'power4.out'
            }, '-=0.3')
            .to('.description', { y: 0, opacity: 1, duration: 0.8, ease: 'power3.out' }, '-=0.4');

        // Highlights block
        gsap.set('.highlights-block .section-eyebrow', { y: 30, opacity: 0 });
        gsap.set('.highlights-title', { y: 40, opacity: 0 });
        gsap.set('.highlights-list li', { x: -40, opacity: 0 });

        var highlightsTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.highlights-block',
                start: 'top 70%'
            }
        });

        highlightsTl
            .to('.highlights-block .section-eyebrow', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' })
            .to('.highlights-title', { y: 0, opacity: 1, duration: 0.6, ease: 'power3.out' }, '-=0.3')
            .to('.highlights-list li', { 
                x: 0, 
                opacity: 1, 
                duration: 0.5, 
                stagger: 0.1,
                ease: 'power3.out'
            }, '-=0.2');

        // Highlight item hover
        var highlightItems = document.querySelectorAll('.highlights-list li');
        highlightItems.forEach(function(item) {
            item.addEventListener('mouseenter', function() {
                gsap.to(item, { x: 10, duration: 0.3, ease: 'power2.out' });
                gsap.to(item.querySelector('.highlight-check'), { scale: 1.2, rotation: 10, duration: 0.3, ease: 'back.out(1.7)' });
            });
            item.addEventListener('mouseleave', function() {
                gsap.to(item, { x: 0, duration: 0.3, ease: 'power2.out' });
                gsap.to(item.querySelector('.highlight-check'), { scale: 1, rotation: 0, duration: 0.3, ease: 'power2.out' });
            });
        });

        // ============================================
        // SIDEBAR ANIMATIONS
        // ============================================
        gsap.set('.info-card', { 
            y: 60, 
            opacity: 0,
            rotationY: -5
        });
        gsap.set('.cta-card', { 
            y: 60, 
            opacity: 0,
            rotationY: -5
        });
        gsap.set('.info-item', { x: 20, opacity: 0 });

        var sidebarTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.content-sidebar',
                start: 'top 75%'
            }
        });

        sidebarTl
            .to('.info-card', { 
                y: 0, 
                opacity: 1,
                rotationY: 0,
                duration: 0.8,
                ease: 'power4.out'
            })
            .to('.info-item', { 
                x: 0, 
                opacity: 1, 
                duration: 0.4, 
                stagger: 0.06,
                ease: 'power3.out'
            }, '-=0.4')
            .to('.cta-card', { 
                y: 0, 
                opacity: 1,
                rotationY: 0,
                duration: 0.8,
                ease: 'power4.out'
            }, '-=0.3');

        // Info card hover
        var infoCard = document.querySelector('.info-card');
        if (infoCard) {
            infoCard.addEventListener('mouseenter', function() {
                gsap.to(infoCard, { 
                    y: -8, 
                    boxShadow: '0 20px 50px rgba(0,0,0,0.12)',
                    duration: 0.4, 
                    ease: 'power2.out' 
                });
            });
            infoCard.addEventListener('mouseleave', function() {
                gsap.to(infoCard, { 
                    y: 0, 
                    boxShadow: '0 0 0 rgba(0,0,0,0)',
                    duration: 0.4, 
                    ease: 'power2.out' 
                });
            });
        }

        // CTA card hover
        var ctaCard = document.querySelector('.cta-card');
        if (ctaCard) {
            ctaCard.addEventListener('mouseenter', function() {
                gsap.to(ctaCard, { 
                    y: -8, 
                    boxShadow: '0 20px 50px rgba(0,0,0,0.3)',
                    duration: 0.4, 
                    ease: 'power2.out' 
                });
            });
            ctaCard.addEventListener('mouseleave', function() {
                gsap.to(ctaCard, { 
                    y: 0, 
                    boxShadow: '0 0 0 rgba(0,0,0,0)',
                    duration: 0.4, 
                    ease: 'power2.out' 
                });
            });
        }

        // Info item hover
        var infoItems = document.querySelectorAll('.info-item');
        infoItems.forEach(function(item) {
            item.addEventListener('mouseenter', function() {
                gsap.to(item, { x: 5, duration: 0.3, ease: 'power2.out' });
                gsap.to(item.querySelector('.info-value'), { color: '#8a7f6e', duration: 0.3 });
            });
            item.addEventListener('mouseleave', function() {
                gsap.to(item, { x: 0, duration: 0.3, ease: 'power2.out' });
                gsap.to(item.querySelector('.info-value'), { color: '#1a1a1a', duration: 0.3 });
            });
        });

        // ============================================
        // BOTTOM CTA ANIMATIONS
        // ============================================
        gsap.set('.cta-word', { y: 60, opacity: 0, rotationX: -30 });
        gsap.set('.bottom-cta-text', { y: 30, opacity: 0 });
        gsap.set('.bottom-cta-button', { y: 30, opacity: 0, scale: 0.9 });

        var bottomCtaTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.bottom-cta',
                start: 'top 70%'
            }
        });

        bottomCtaTl
            .to('.cta-word', {
                y: 0,
                opacity: 1,
                rotationX: 0,
                duration: 1,
                stagger: 0.08,
                ease: 'power4.out'
            })
            .to('.bottom-cta-text', {
                y: 0,
                opacity: 1,
                duration: 0.8,
                ease: 'power3.out'
            }, '-=0.5')
            .to('.bottom-cta-button', {
                y: 0,
                opacity: 1,
                scale: 1,
                duration: 0.8,
                ease: 'back.out(1.7)'
            }, '-=0.4');

        // ============================================
        // BACK LINK HOVER
        // ============================================
        var backLink = document.querySelector('.back-link');
        if (backLink) {
